@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "Compliance Monitoring";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold text-primary mb-0">
            Compliance Monitoring Dashboard
        </h4>
    </div>

  <!-- Filter Section -->
<div class="row mb-3">
    <div class="col d-flex justify-content-end align-items-end gap-3 flex-wrap">
        <div class="col-md-auto">
            <select class="form-select">
                <option selected disabled>Select document type</option>
                <option>Meeting Minutes</option>
                <option>Budget Proposals</option>
                <option>Project Reports</option>
            </select>
        </div>
        <div class="col-md-auto">
            <select class="form-select">
                <option selected>All</option>
                <option>Compliant</option>
                <option>Non-Compliant</option>
                <option>Pending</option>
            </select>
        </div>
        <div class="col-md-auto">
            <button class="btn btn-primary"><i class="bi bi-funnel"></i> Apply</button>
        </div>
    </div>
</div>


    <!-- Compliance Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white fw-semibold">
            <i class="bi bi-file-earmark-text me-2"></i>Barangay Compliance Records
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Barangay</th>
                            <th>Document</th>
                            <th>Status</th>
                            <th>Last Submission</th>
                            <th>Remarks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Barangay Guinobatan</td>
                            <td>Budget Proposal Q4</td>
                            <td><span class="badge bg-success">Compliant</span></td>
                            <td>Oct 10, 2025</td>
                            <td>On Time</td>
                        </tr>
                        <tr>
                            <td>Barangay San Vicente</td>
                            <td>Meeting Minutes</td>
                            <td><span class="badge bg-danger">Non-Compliant</span></td>
                            <td>Sept 28, 2025</td>
                            <td>Late Submission</td>
                        </tr>
                        <tr>
                            <td>Barangay Poblacion</td>
                            <td>Project Report</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>—</td>
                            <td>Awaiting Upload</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4 text-end">
                <button class="btn btn-primary me-2"><i class="bi bi-file-earmark-bar-graph"></i> Generate Compliance Report</button>
                <button class="btn btn-secondary"><i class="bi bi-bell"></i> Send Reminder Notifications</button>
            </div>
        </div>
    </div>

    <!-- Automated Notifications Section -->
    <div class="card shadow-sm p-3">
        <h5 class="fw-semibold text-secondary"><i class="bi bi-bell-fill"></i> Automated Notification System</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><i class="bi bi-envelope-check text-success me-2"></i> 5 barangays received deadline reminders</li>
            <li class="list-group-item"><i class="bi bi-clock text-warning me-2"></i> Next scheduled reminder: <strong>Oct 25, 2025</strong></li>
        </ul>
    </div>
</div>
