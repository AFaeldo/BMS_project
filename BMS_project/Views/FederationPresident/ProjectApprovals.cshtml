@model IEnumerable<BMS_project.Models.ProjectApprovalModel>

@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "Project Approvals";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Project Approval </h2>
    </div>

    <!-- Filter/Search -->
    <div class="row mb-3">
        <div class="col d-flex justify-content-end align-items-end gap-2">
            <input type="text" id="searchInput" class="form-control w-auto" placeholder="Search project..." />
            <select id="statusFilter" class="form-select w-auto">
                <option value="">Filter by Status</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Completed">Completed</option>
            </select>
            <button id="applyFilter" type="button" class="btn btn-primary">
                <i class="bi bi-funnel"></i> Apply
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white fw-semibold">
            <i class="bi bi-list-task me-2"></i> Barangay Project Submissions
        </div>

        <div class="card-body">
            <table class="table table-hover table-bordered align-middle" id="projectTable">
                <thead class="table-light">
                    <tr>
                        <th>Project Title</th>
                        <th>Barangay</th>
                        <th>Date Submitted</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Project_Title</td>
                                <td>@item.Barangay_Name</td>
                                <td>@item.Date_Submitted?.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @switch (item.Project_Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning text-dark">Pending</span>;
                                            break;
                                        case "Approved":
                                            <span class="badge bg-success">Approved</span>;
                                            break;
                                        case "Rejected":
                                            <span class="badge bg-danger">Rejected</span>;
                                            break;
                                        default:
                                            <span class="badge bg-info text-dark">@item.Project_Status</span>;
                                            break;
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.Project_Status == "Pending")
                                    {
                                        <button type="button" class="btn btn-success btn-sm me-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#remarksModal"
                                                data-id="@item.Project_ID"
                                                data-title="@item.Project_Title"
                                                data-status="Approved">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>

                                        <button type="button" class="btn btn-danger btn-sm"
                                                data-bs-toggle="modal"
                                                data-bs-target="#remarksModal"
                                                data-id="@item.Project_ID"
                                                data-title="@item.Project_Title"
                                                data-status="Rejected">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-secondary btn-sm" disabled>
                                            <i class="bi bi-check2-all"></i> @item.Project_Status
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle"></i> No project records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Remarks Modal -->
<div class="modal fade" id="remarksModal" tabindex="-1" aria-labelledby="remarksModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-controller="FederationPresident" asp-action="UpdateStatus">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="remarksModalLabel">
                        <i class="bi bi-chat-text"></i> Project Review
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="projectId" id="projectId" />
                    <input type="hidden" name="status" id="status" />

                    <div class="mb-2">
                        <label class="form-label fw-semibold">Project Title</label>
                        <input type="text" id="projectTitle" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Remarks / Feedback</label>
                        <textarea class="form-control" name="remarks" id="remarks" rows="3" placeholder="Write your feedback..."></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Confirm
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Search & Filter Script -->
<script>
    // Filter and search functionality
    document.getElementById("applyFilter").addEventListener("click", function () {
        const searchValue = document.getElementById("searchInput").value.toLowerCase();
        const filterValue = document.getElementById("statusFilter").value;
        const rows = document.querySelectorAll("#projectTable tbody tr");

        rows.forEach(row => {
            const title = row.cells[0].textContent.toLowerCase();
            const status = row.cells[3].textContent.trim();
            const matchesSearch = title.includes(searchValue);
            const matchesFilter = filterValue === "" || status === filterValue;
            row.style.display = matchesSearch && matchesFilter ? "" : "none";
        });
    });

    // Modal dynamic data
    const remarksModal = document.getElementById('remarksModal');
    remarksModal.addEventListener('show.bs.modal', event => {
        const button = event.relatedTarget;
        document.getElementById('projectId').value = button.getAttribute('data-id');
        document.getElementById('projectTitle').value = button.getAttribute('data-title');
        document.getElementById('status').value = button.getAttribute('data-status');
        document.getElementById('remarks').value = "";
    });
</script>
