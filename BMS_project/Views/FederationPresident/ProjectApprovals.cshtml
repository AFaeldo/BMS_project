@model IEnumerable<BMS_project.ViewModels.ProjectApprovalListViewModel>
@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "Project Approvals";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Project Approval</h2>
    </div>

    <!-- Filter/Search -->
    <div class="row mb-3">
        <div class="col d-flex justify-content-end align-items-end gap-2">
            <input type="text" id="searchInput" class="form-control w-auto" placeholder="Search project..." />
            <select id="statusFilter" class="form-select w-auto">
                <option value="">Filter by Status</option>
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
                <option value="Completed">Completed</option>
            </select>
            <button id="applyFilter" type="button" class="btn btn-primary">
                <i class="bi bi-funnel"></i> Apply
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Table -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary">
            <h5 class="mb-0 fw-bold text-white">Barangay Project Submissions</h5>
        </div>

        <div class="card-body">
            <table class="table table-hover table-bordered align-middle" id="projectTable">
                <thead class="table-light">
                    <tr>
                        <th>Project Title</th>
                        <th>Barangay</th>
                        <th>Alloted Budget</th>
                        <th>Date Submitted</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Barangay</td>
                                <td>@item.Amount.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                                <td>@item.DateSubmitted.ToString("yyyy-MM-dd")</td>
                                <td>@item.Status</td>
                                <td class="text-center">
                                    <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#viewModal"
                                            data-id="@item.Project_ID"
                                            data-title="@item.Title"
                                            data-bgy="@item.Barangay"
                                            data-budget="@item.Amount.ToString("C", new System.Globalization.CultureInfo("en-PH"))"
                                            data-date="@(item.Date.HasValue ? item.Date.Value.ToString("yyyy-MM-dd") : "-")"
                                            data-status="@item.Status"
                                            data-desc="@item.Description">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal"
                                            data-id="@item.Project_ID"
                                            data-budget="@item.Amount"
                                            data-status="@item.Status">
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted">No pending projects found.</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<!-- Remarks Modal -->
<div class="modal fade" id="remarksModal" tabindex="-1" aria-labelledby="remarksModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-controller="FederationPresident" asp-action="UpdateStatus">
                <div class="modal-header bg-primary text-dark">
                    <h5 class="modal-title" id="remarksModalLabel">
                        Project Rejection Reason
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-dark">
                    <input type="hidden" name="projectId" id="remarksProjectId" />
                    <input type="hidden" name="status" id="remarksStatus" />

                    <div class="mb-2">
                        <label class="form-label fw-semibold">Project Title</label>
                        <input type="text" id="remarksProjectTitle" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Reason for Rejection</label>
                        <textarea class="form-control" name="remarks" id="remarksText" rows="3" placeholder="Write your feedback..." required></textarea>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Confirm</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- VIEW MODAL -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-dark">
                <h5 class="modal-title">
                    Project Details
                </h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body text-dark">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="fw-semibold">Project Title:</label>
                        <input id="vTitle" class="form-control" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="fw-semibold">Barangay:</label>
                        <input id="vBarangay" class="form-control" readonly />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label class="fw-semibold">Alloted Budget:</label>
                        <input id="vBudget" class="form-control" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="fw-semibold">Date Submitted:</label>
                        <input id="vDate" class="form-control" readonly />
                    </div>
                    <div class="col-md-4">
                        <label class="fw-semibold">Status:</label>
                        <input id="vStatus" class="form-control" readonly />
                    </div>
                </div>

                 <div class="mb-3">
                    <label class="fw-semibold">Description:</label>
                    <textarea id="vDesc" class="form-control" readonly></textarea>
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Documents:</label>
                    <div id="vDocuments" class="list-group">
                        <!-- Documents will be loaded here via JS -->
                        <div class="text-muted small">Loading documents...</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="fw-semibold">Reason (if rejected):</label>
                    <textarea id="vReason" class="form-control" readonly></textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- EDIT MODAL -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form method="post" asp-controller="FederationPresident" asp-action="ApproveProject" id="editForm">

                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">Edit Project Details</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-dark">
                    <input type="hidden" name="Project_ID" id="eId">

                    <label class="fw-semibold">Update Budget</label>
                    <input type="number" step="0.01" class="form-control mb-3" name="Approved_Amount" id="eBudget" />

                    <label class="fw-semibold">Update Status</label>
                    <select class="form-select" name="Status" id="eStatus">
                        <option>Pending</option>
                        <option>Approved</option>
                        <option>Rejected</option>
                        <option>Completed</option>
                    </select>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>

            </form>
        </div>
    </div>
</div>


<!-- Scripts -->
<script>
    // SEARCH & FILTER
    document.getElementById("applyFilter").addEventListener("click", function () {
        const searchValue = document.getElementById("searchInput").value.toLowerCase();
        const filterValue = document.getElementById("statusFilter").value;
        const rows = document.querySelectorAll("#projectTable tbody tr");

        rows.forEach(row => {
            if (row.children.length === 1) return; // Skip "No projects found" row
            const title = row.cells[0].textContent.toLowerCase();
            const status = row.cells[4].textContent.trim(); // Status column is now index 4 after adding DateSubmitted
            const matchesSearch = title.includes(searchValue);
            const matchesFilter = filterValue === "" || status === filterValue;
            
            if (matchesSearch && matchesFilter) {
                 row.style.display = "";
            } else {
                 row.style.display = "none";
            }
        });
    });

    // VIEW MODAL
    const viewModal = document.getElementById('viewModal');
    viewModal.addEventListener('show.bs.modal', e => {
        const btn = e.relatedTarget;
        const id = btn.getAttribute('data-id');

        const docContainer = document.getElementById('vDocuments');
        docContainer.innerHTML = '<div class="text-muted small">Loading documents...</div>';

        // Clear previous values while loading
        document.getElementById('vTitle').value = '';
        document.getElementById('vBarangay').value = '';
        document.getElementById('vBudget').value = '';
        document.getElementById('vDate').value = '';
        document.getElementById('vStatus').value = '';
        document.getElementById('vDesc').value = '';
        document.getElementById('vReason').value = '';


        if(id) {
            fetch(`/FederationPresident/GetProjectDetails?id=${id}`)
                .then(res => {
                    if (!res.ok) throw new Error('Network response was not ok: ' + res.statusText);
                    return res.json();
                })
                .then(data => {
                    // Update fields with fresh data
                    document.getElementById('vTitle').value = data.title || 'N/A';
                    document.getElementById('vBarangay').value = data.barangay || 'N/A';
                    document.getElementById('vBudget').value = new Intl.NumberFormat('en-PH', { style: 'currency', currency: 'PHP' }).format(data.amount || 0);
                    document.getElementById('vDate').value = data.dateSubmitted || '-';
                    document.getElementById('vStatus').value = data.status || 'N/A';
                    document.getElementById('vDesc').value = data.description || '-';
                    document.getElementById('vReason').value = data.reason || "â€”"; // Assuming 'reason' might come from the details now

                    // Render Documents
                    if(data.documents && data.documents.length > 0) {
                        let html = '';
                        data.documents.forEach(doc => {
                            html += `
                                <a href="/FederationPresident/DownloadFile?id=${doc.fileId}&inline=true" target="_blank" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span><i class="bi bi-file-earmark-pdf text-danger me-2"></i> ${doc.fileName}</span>
                                    <small class="text-muted"><i class="bi bi-eye me-1"></i>View</small>
                                </a>
                            `;
                        });
                        docContainer.innerHTML = html;
                    } else {
                        docContainer.innerHTML = '<div class="alert alert-light border">No documents attached.</div>';
                    }
                })
                .catch(err => {
                    console.error("Failed to fetch project details:", err);
                    docContainer.innerHTML = '<div class="text-danger small">Failed to load documents.</div>';
                    document.getElementById('vTitle').value = 'Error loading';
                    document.getElementById('vBarangay').value = 'Error loading';
                    document.getElementById('vBudget').value = 'Error loading';
                    document.getElementById('vDate').value = 'Error loading';
                    document.getElementById('vStatus').value = 'Error loading';
                    document.getElementById('vDesc').value = 'Error loading';
                    document.getElementById('vReason').value = 'Error loading';
                });
        } else {
            docContainer.innerHTML = '<div class="alert alert-danger">Project ID not found.</div>';
        }
    });

    // EDIT MODAL
    const editModal = document.getElementById('editModal');
    editModal.addEventListener('show.bs.modal', e => {
        const btn = e.relatedTarget;
        const id = btn.getAttribute('data-id');
        
        document.getElementById('eId').value = id;
        
        // Clear previous values or show loading state
        document.getElementById('eBudget').value = "";
        
        // Fetch latest details via AJAX
        fetch(`/FederationPresident/GetProjectDetails?id=${id}`)
            .then(response => {
                if (!response.ok) throw new Error('Network response was not ok');
                return response.json();
            })
            .then(data => {
                document.getElementById('eBudget').value = data.amount;
                document.getElementById('eStatus').value = data.status;
            })
            .catch(err => {
                console.error("Failed to fetch project details", err);
                // Fallback to data attributes if fetch fails
                document.getElementById('eBudget').value = btn.getAttribute('data-budget');
                document.getElementById('eStatus').value = btn.getAttribute('data-status');
            });
    });

    // AUTO OPEN REMARKS MODAL WHEN REJECTED FROM EDIT
    document.getElementById('editForm').addEventListener('submit', function(e) {
        const status = document.getElementById('eStatus').value;
        if (status === "Rejected") {
            e.preventDefault();
            // Populate Remarks Modal
            document.getElementById('remarksProjectId').value = document.getElementById('eId').value;
            // Note: eTitle isn't available in editModal, so we might have to find it or just leave it blank.
            // The previous code had `document.getElementById('eTitle')?.value`, but eTitle input doesn't exist in editModal.
            // We can try to find the row logic or just not show the title.
            document.getElementById('remarksProjectTitle').value = "Project ID: " + document.getElementById('eId').value; 
            document.getElementById('remarksStatus').value = status;
            
            // Close Edit Modal
            const editModalInstance = bootstrap.Modal.getInstance(editModal);
            editModalInstance.hide();

            // Open Remarks Modal
            const remarksModalEl = new bootstrap.Modal(document.getElementById('remarksModal'));
            remarksModalEl.show();
        }
    });
</script>