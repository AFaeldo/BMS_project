@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "Administrative Dashboard";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Administrative Dashboard</h2>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-city fs-2 text-primary mb-2"></i>
                    <h6 class="text-muted mb-1">Total Barangay</h6>
                    <h3 class="fw-bold mb-0">@((ViewBag.TotalBarangays ?? 0))</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-diagram-project fs-2 text-info mb-2"></i>
                    <h6 class="text-muted mb-1">Total Projects</h6>
                    <h3 class="fw-bold mb-0">@((ViewBag.TotalProjects ?? 0))</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-circle-check fs-2 text-success mb-2"></i>
                    <h6 class="text-muted mb-1">Compliant Barangay</h6>
                    <h3 class="fw-bold mb-0">@((ViewBag.CompliantBarangays ?? 0))</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-hourglass-half fs-2 text-warning mb-2"></i>
                    <h6 class="text-muted mb-1">Pending Submissions</h6>
                    <h3 class="fw-bold mb-0">@((ViewBag.PendingSubmissions ?? 0))</h3>
                </div>
            </div>
        </div>
    </div>


    <div class="row g-3 mb-4">


        <!-- Barangay Budget Overview (Left) -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3 h-100">

                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <div class="fw-bold">Barangay Budget Overview</div>
                    <a class="btn btn-sm btn-outline-primary"
                       href="@Url.Action("Index", "FederationBudget")"
                       aria-label="View full budget list">
                        Full List
                    </a>
                </div>

                <div class="p-3">
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="text-muted small">Allotment</div>
                            <div class="fw-bold">₱@String.Format("{0:N2}", (ViewBag.TotalAllotment ?? 0m))</div>
                        </div>

                        <div class="col-4">
                            <div class="text-muted small">Disbursed</div>
                            <div class="fw-bold">₱@String.Format("{0:N2}", (ViewBag.TotalDisbursed ?? 0m))</div>
                        </div>

                        <div class="col-4">
                            <div class="text-muted small">Balance</div>
                            <div class="fw-bold">₱@String.Format("{0:N2}", (ViewBag.TotalBalance ?? 0m))</div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


        <!-- 🟦 Barangay Activity Tracker (Right) -->
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white fw-bold d-flex justify-content-between align-items-center">
                    <span>Barangay Activity Tracker</span>
                    <a class="btn btn-sm btn-outline-secondary" href="#">View All</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Barangay</th>
                                    <th>Submission</th>
                                    <th>Status</th>
                                    <th>Last Updated</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> 