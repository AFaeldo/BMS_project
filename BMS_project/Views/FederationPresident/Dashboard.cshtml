@model BMS_project.ViewModels.FederationDashboardViewModel

@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- Header & Filter -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">Federation Dashboard</h2>
    </div>

    <div class="alert alert-light border-start border-primary border-5 shadow-sm mb-4">
        <strong>Viewing Data For:</strong> @Model.CurrentTermName
    </div>

    <!-- KPI CARDS -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm bg-white text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="fw-semibold mb-1">Total Federation Budget</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalFederationBudget.ToString("C", new System.Globalization.CultureInfo("en-PH"))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm bg-white text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="fw-semibold mb-1">Total Distributed to Barangays</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalDisbursed.ToString("C", new System.Globalization.CultureInfo("en-PH"))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm bg-white text-dark h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="fw-semibold mb-1">Federation Remaining Balance</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalRemainingBalance.ToString("C", new System.Globalization.CultureInfo("en-PH"))</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card text-center border-0 shadow-sm bg-white h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="text-muted mb-1">Approved Projects</h6>
                    <h2 class="fw-bold text-success mb-0">@Model.TotalApprovedProjects</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-center border-0 shadow-sm bg-white h-100">
                <div class="card-body d-flex flex-column justify-content-center">
                    <h6 class="text-muted mb-1">Pending Projects</h6>
                    <h2 class="fw-bold text-warning mb-0">@Model.TotalPendingProjects</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- CHARTS -->
    <div class="row g-4">
        <!-- Monthly Expenses Chart -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white fw-bold">Monthly Project Expenses (Federation Wide)</div>
                <div class="card-body">
                    <canvas id="monthlyChart" style="min-height: 300px;"></canvas>
                </div>
            </div>
        </div>

        <!-- Barangay Budget Distribution Chart -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white fw-bold">Budget Allocation per Barangay</div>
                <div class="card-body">
                    <canvas id="barangayBudgetChart" style="min-height: 300px;"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // --- Monthly Expenses Chart ---
        const monthlyLabels = @Html.Raw(Model.MonthlyExpensesLabelsJson);
        const monthlyData = @Html.Raw(Model.MonthlyExpensesDataJson);

        new Chart(document.getElementById('monthlyChart'), {
            type: 'line',
            data: {
                labels: monthlyLabels,
                datasets: [{
                    label: 'Total Expenses (PHP)',
                    data: monthlyData,
                    borderColor: '#4e73df',
                    backgroundColor: 'rgba(78, 115, 223, 0.1)',
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // --- Barangay Budget Allocation Chart ---
        const brgyLabels = @Html.Raw(Model.BarangayBudgetLabelsJson);
        const brgyData = @Html.Raw(Model.BarangayBudgetDataJson);

        new Chart(document.getElementById('barangayBudgetChart'), {
            type: 'bar',
            data: {
                labels: brgyLabels,
                datasets: [{
                    label: 'Budget Allocated (PHP)',
                    data: brgyData,
                    backgroundColor: '#36b9cc',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y', // Horizontal bar chart for better readability of names
                scales: {
                    x: { beginAtZero: true }
                },
                plugins: {
                    legend: { display: false }
                }
            }
        });
    </script>
}