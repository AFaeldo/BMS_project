@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "Report Generation";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Report Generation</h2>
    </div>

    <!-- Report Generation Form -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white fw-semibold">
            Generate Federation Reports
        </div>

        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-4">
                    <label class="form-label fw-semibold">Report Type</label>
                    <select class="form-select">
                        <option selected disabled>Select Report Type</option>
                        <option>Project Summary</option>
                        <option>Budget Report</option>
                        <option>Youth Demographics</option>
                        <option>Activity Compliance</option>
                        <option>Barangay Submission Status</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">From</label>
                    <input type="date" class="form-control">
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">To</label>
                    <input type="date" class="form-control">
                </div>

                <div class="col-md-2 align-self-end">
                    <button class="btn btn-primary w-100"><i class="bi bi-printer"></i> Generate</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Compliance Monitoring Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white fw-semibold">
            Compliance Monitoring
        </div>

        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Barangay</th>
                            <th>Meeting Minutes</th>
                            <th>Budget Proposal</th>
                            <th>Project Report</th>
                            <th>Last Submission</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>

                    <tbody>
                       
                        @* 
                        <tr>
                            <td>@item.Barangay</td>
                            <td>@item.MeetingMinutes</td>
                            <td>@item.BudgetProposal</td>
                            <td>@item.ProjectReport</td>
                            <td>@item.LastSubmission</td>
                            <td>@item.Status</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-primary btnViewCompliance" data-id="@item.Id">
                                    <i class="bi bi-eye"></i> View
                                </button>
                            </td>
                        </tr>
                        *@
                    </tbody>
                </table>
            </div>

            <button class="btn btn-outline-primary btn-sm mt-3">
                <i class="bi bi-bar-chart-line"></i> Generate Compliance Report
            </button>

        </div>
    </div>

    <!-- Report Preview Section -->
    <div class="card shadow-sm mt-4 p-3">
        <h5 class="fw-semibold"><i class="bi bi-eye"></i> Generated Report Preview</h5>
        <p class="text-muted mb-0">No report generated yet. Select filters and click “Generate”.</p>
    </div>

</div>


<!-- MODAL FOR VIEWING REPORT / COMPLIANCE DETAILS -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">Report Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">

                <form id="reportModalForm">

                    <input type="hidden" id="reportId" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Barangay</label>
                            <input type="text" class="form-control" id="modalBarangay" readonly />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Status</label>
                            <input type="text" class="form-control" id="modalStatus" readonly />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Meeting Minutes</label>
                            <input type="text" class="form-control" id="modalMeeting" readonly />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Budget Proposal</label>
                            <input type="text" class="form-control" id="modalBudget" readonly />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Project Report</label>
                            <input type="text" class="form-control" id="modalProject" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Last Submission</label>
                        <input type="text" class="form-control" id="modalLastSubmission" readonly />
                    </div>

                </form>

            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


<!-- JS TO OPEN MODAL -->
<script>
    document.addEventListener("click", function (e) {

        if (e.target.closest(".btnViewCompliance")) {

            let id = e.target.closest(".btnViewCompliance").dataset.id;

            let modal = new bootstrap.Modal(document.getElementById("reportModal"));
            modal.show();
        }
    });
</script>
