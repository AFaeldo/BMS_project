@{
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">User Management</h2>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row">
        <div class="col-12 text-end mb-3">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#userModal">
                <i class="bi bi-person-plus me-1"></i> Add User
            </button>
        </div>
    </div>

    <!-- USERS TABLE -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success">
            <h5 class="mb-0 fw-bold text-white ">Registered Users</h5>
        </div>


        <div class="card-body p-3">
            <div class="table-responsive">
                <table id="tblUsers" class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>UID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>Barangay</th>
                            <th>Role</th>
                            <th class="text-center">Status</th>
                            <th class="text-center" style="width:130px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- dynamic rows -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- ADD/EDIT USER MODAL -->
    <div class="modal fade" id="userModal" data-bs-backdrop="static">
        <div class="modal-dialog modal-lg">
            <form id="frmUser" class="modal-content text-dark" onsubmit="return false;">

                <div class="modal-header text-dark">
                    <h5 id="userModalLabel" class="modal-title text-dark">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-dark">
                    <input id="UserId" type="hidden" value="0">

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label text-dark">First Name</label>
                            <input id="FirstName" class="form-control text-dark">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Last Name</label>
                            <input id="LastName" class="form-control text-dark">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Email</label>
                            <input id="Email" type="email" class="form-control text-dark">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Contact</label>
                            <input id="ContactNo" class="form-control text-dark">
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Barangay</label>
                            <select id="BarangayId" class="form-select text-dark"></select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-dark">Role</label>
                            <select id="RoleId" class="form-select text-dark"></select>
                        </div>

                        <div id="passwordRow" class="col-12">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label text-dark">Password</label>
                                    <input id="Password" type="password" class="form-control text-dark">
                                </div>

                                <div class="col-md-6">
                                    <label class="form-label text-dark">Confirm Password</label>
                                    <input id="ConfirmPassword" type="password" class="form-control text-dark">
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="form-label text-dark">Notes</label>
                            <textarea id="Notes" class="form-control text-dark" rows="2"></textarea>
                        </div>

                        <div class="col-12">
                            <div class="form-check">
                                <input id="IsActive" type="checkbox" class="form-check-input" checked>
                                <label class="form-check-label text-dark" for="IsActive">Active</label>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-light text-dark" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button id="btnSaveUser" class="btn btn-primary" type="button">Save User</button>
                </div>

            </form>
        </div>
    </div>

    <!-- RESET PASSWORD MODAL -->
    <div class="modal fade" id="resetPwdModal" data-bs-backdrop="static">
        <div class="modal-dialog">
            <form id="frmResetPwd" class="modal-content text-dark">

                <div class="modal-header text-dark">
                    <h5 class="modal-title text-dark">Reset Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-dark">
                    <p class="text-dark">Set a new temporary password for <strong id="resetUserName" class="text-dark"></strong></p>

                    <div class="mb-3">
                        <label class="form-label text-dark">Temporary Password</label>
                        <input id="TempPassword" type="password" class="form-control text-dark">
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-dark">Confirm Password</label>
                        <input id="ConfirmTempPassword" type="password" class="form-control text-dark">
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-light text-dark" data-bs-dismiss="modal">Cancel</button>
                    <button id="btnResetPwd" class="btn btn-warning" type="button">Reset</button>
                </div>

            </form>
        </div>
    </div>

    <!-- CONFIRM ACTION MODAL -->
    <div class="modal fade" id="confirmModal" data-bs-backdrop="static">
        <div class="modal-dialog">
            <form class="modal-content text-dark">

                <div class="modal-header text-dark">
                    <h5 class="modal-title text-dark">Confirm Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-dark">
                    <p id="confirmMessage" class="fw-semibold text-dark"></p>

                    <label class="form-label text-dark">Remarks (optional)</label>
                    <input id="ConfirmRemarks" class="form-control text-dark">
                </div>

                <div class="modal-footer">
                    <button class="btn btn-light text-dark" type="button" data-bs-dismiss="modal">Cancel</button>
                    <button id="btnConfirm" class="btn btn-danger" type="button">Yes, proceed</button>
                </div>

            </form>
        </div>
    </div>

<!-- SCRIPTS -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    $(document).on("click", ".btn-edit", function () {
        $("#userModalLabel").text("Edit User");
    });

    $(document).on("click", ".btn-resetpwd", function () {
        let name = $(this).closest("tr").find("td:nth-child(2)").text();
        $("#resetUserName").text(name);
    });

    $(document).on("click", ".btn-deactivate", function () {
        let user = $(this).data("name");
        $("#confirmMessage").text("Are you sure you want to deactivate " + user + "?");
    });
</script>
