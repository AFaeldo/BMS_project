@model IEnumerable<BMS_project.ViewModels.ProjectApprovalListViewModel>

@{
    ViewData["Title"] = "Project History";
    Layout = "~/Views/Shared/_LayoutFederation.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold">Project History</h2>
        <p class="text-muted">Overview of all processed projects (Approved, Rejected, Completed, Ongoing) across all Barangays.</p>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light">
            <form method="get" action="@Url.Action("ProjectHistory")" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Filter by Barangay:</label>
                    <select name="barangayId" class="form-select">
                        <option value="" selected="@(ViewBag.SelectedBarangayId == null ? "selected" : null)">-- All Barangays --</option>
                        @if (ViewBag.Barangays != null)
                        {
                            foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Barangays)
                            {
                                <option value="@item.Value" selected="@(item.Selected ? "selected" : null)">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Filter by Status:</label>
                    <select name="status" class="form-select">
                        <option value="" selected="@(string.IsNullOrEmpty(ViewBag.SelectedStatus as string) ? "selected" : null)">-- All Statuses --</option>
                        @if (ViewBag.Statuses != null)
                        {
                            foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Statuses)
                            {
                                <option value="@item.Value" selected="@(item.Selected ? "selected" : null)">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Projects Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Barangay</th>
                            <th>Project Title</th>
                            <th>Status</th>
                            <th>Allocated Budget</th>
                            <th>Date Submitted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var project in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@project.Barangay</td>
                                    <td>
                                        <span class="fw-bold d-block">@project.Title</span>
                                        <small class="text-muted text-truncate d-inline-block" style="max-width: 250px;">@project.Description</small>
                                    </td>
                                    <td>
                                        @if (project.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else if (project.Status == "Approved" || project.Status == "Ongoing")
                                        {
                                            <span class="badge bg-info text-dark">@project.Status</span>
                                        }
                                        else if (project.Status == "Rejected")
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@project.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @project.Amount.ToString("C", new System.Globalization.CultureInfo("en-PH"))
                                    </td>
                                    <td>@project.DateSubmitted.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="bi bi-inbox display-6 d-block mb-2"></i>
                                    No project history found matching the criteria.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>