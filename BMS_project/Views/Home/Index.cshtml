@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero d-flex align-items-center text-white">
    <div class="container text-center text-md-start">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-5 fw-bold mb-3">Welcome to Barangay Management System</h1>
                <p class="lead mb-4">Streamlining barangay services for efficiency and transparency.</p>
                <a href="@Url.Action("Login", "Account")" class="btn btn-orange btn-lg px-4 py-2 text-white">LOGIN</a>
            </div>

        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5 bg-light text-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">About the System</h2>
            <p class="text-muted">
                <strong>KABATAAN+</strong> is a digital management system designed to assist Sangguniang Kabataan (SK) officials across the 62 barangays of Calapan City in organizing, monitoring, and managing youth-related projects, budgets, and profiles efficiently.
            </p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-people-fill fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Youth Profiling</h5>
                    <p class="text-muted">
                        Maintain an updated and organized database of youth constituents per barangay. Automatically categorize profiles by age, gender, and education status to support better program planning and monitoring.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-folder-check fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Project & Budget Management</h5>
                    <p class="text-muted">
                        Enable SK Chairpersons to submit project proposals and budget plans online. Monitor progress, review funding updates, and access archived records for improved transparency and accountability.
                    </p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-bar-chart-line fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Monitoring & Reports</h5>
                    <p class="text-muted">
                        Generate automated reports and compliance summaries to help SK Federation and LGU officials track performance, submissions, and project outcomes across all barangays in real-time.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

