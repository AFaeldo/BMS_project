@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero d-flex align-items-center text-white">
    <div class="container text-center text-md-start">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-5 fw-bold mb-3">Welcome to Barangay Management System</h1>
                <p class="lead mb-4">Streamlining barangay services for efficiency and transparency.</p>
                @* <a href="@Url.Action("Login", "Account")" class="btn btn-orange btn-lg px-4 py-2">LOGIN</a> *@
            </div>

        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5 bg-light text-dark">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">About the System</h2>
            <p class="text-muted">A digital platform designed to assist barangay officials and residents with efficient management and services.</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-person-check fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Resident Records</h5>
                    <p class="text-muted">Easily manage resident profiles, information, and documentation within the barangay.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-file-earmark-text fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Document Requests</h5>
                    <p class="text-muted">Streamline the process of requesting certificates, clearances, and barangay documents online.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-people fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Community Services</h5>
                    <p class="text-muted">Enhancing engagement between barangay officials and residents through accessible services.</p>
                </div>
            </div>
        </div>
    </div>
</section>

