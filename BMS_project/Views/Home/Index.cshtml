@{
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero d-flex align-items-center text-white">
    <div class="container text-center">
        <div class="hero-content">
            <h1 class="hero-title">KABATAAN+ MONITORING SYSTEM</h1>
            @* <a href="@Url.Action("Login", "Account")" class="btn btn-orange btn-lg px-4 py-2">LOGIN</a> *@
        </div>
    </div>
</section>

<!-- About Section -->
<section class="py-5 bg-light text-dark">
    <div class="container">

        <div class="text-center mb-5">
            <h2 class="fw-bold">About the System</h2>
            <p class="text-muted">
                <strong>KABATAAN+</strong> is a digital management platform designed to help SK officials across the 62 barangays of Calapan City efficiently organize and monitor youth-related projects, budgets, and profiles.
            </p>
        </div>

        <div class="row g-4">

            <!-- Youth Profiling -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-people-fill fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Youth Profiling</h5>
                    <p class="text-muted">
                        Maintain an organized database of youth constituents per barangay,
                        with automatic categorization by age, sex, and education status.
                    </p>
                </div>
            </div>

            <!-- Project & Budget Management -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-folder-check fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Project & Budget Management</h5>
                    <p class="text-muted">
                        Allow SK Chairpersons to submit proposals and budget plans online,
                        monitor progress, and review archived records for transparency.
                    </p>
                </div>
            </div>

            <!-- Monitoring & Reports -->
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 text-center p-4">
                    <div class="icon mb-3 text-orange">
                        <i class="bi bi-bar-chart-line fs-1"></i>
                    </div>
                    <h5 class="fw-semibold mb-3">Monitoring & Reports</h5>
                    <p class="text-muted">
                        Generate automated reports and compliance summaries to track
                        project outcomes and barangay performance in real-time.
                    </p>
                </div>
            </div>

        </div>

    </div>
</section>
