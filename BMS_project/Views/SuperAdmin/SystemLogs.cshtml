@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "System Logs";
}

<div class="container-fluid py-4">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-dark mb-0">
            <i class="bi bi-clipboard-data me-2 text-primary"></i> System Activity Logs
        </h3>

        <!-- SEARCH BAR -->
        <div class="input-group input-group-sm" style="width: 280px;">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search text-muted"></i>
            </span>
            <input type="text" class="form-control border-start-0 shadow-none" placeholder="Search logs...">
        </div>
    </div>

    <!-- FILTERS -->
    <div class="card border-0 shadow-sm mb-4 rounded-3">
        <div class="card-body py-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-3 col-sm-6">
                    <select class="form-select form-select-sm">
                        <option selected disabled>Filter by Role</option>
                        <option>Super Admin</option>
                        <option>Barangay Chair</option>
                    </select>
                </div>
                <div class="col-md-3 col-sm-6">
                    <select class="form-select form-select-sm">
                        <option selected disabled>Filter by Barangay</option>
                        <option>San Vicente</option>
                        <option>San Isidro</option>
                    </select>
                </div>
                <div class="col-md-3 col-sm-6">
                    <input type="text" class="form-control form-control-sm" placeholder="Date Range">
                </div>
                <div class="col-md-3 col-sm-6 text-end">
                    <button class="btn btn-sm btn-primary px-4">
                        <i class="bi bi-funnel me-1"></i> Apply Filters
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- LOGS TABLE -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="ps-4 py-3 fw-semibold text-secondary">Date & Time</th>
                        <th class="fw-semibold text-secondary">User</th>
                        <th class="fw-semibold text-secondary">Barangay</th>
                        <th class="fw-semibold text-secondary">Action Details</th>
                        <th class="fw-semibold text-secondary text-end pe-4">Category</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="ps-4 text-nowrap">Oct 21, 2025 <span class="text-muted">|</span> 09:30 AM</td>
                        <td><span class="badge bg-dark">Admin</span></td>
                        <td>All</td>
                        <td>Reviewed and <strong>updated</strong> security settings</td>
                        <td class="text-end pe-4 text-secondary">SECURITY</td>
                    </tr>
                    <tr>
                        <td class="ps-4 text-nowrap">Oct 20, 2025 <span class="text-muted">|</span> 03:45 PM</td>
                        <td><span class="badge bg-secondary">Brgy. Chair - San Vicente</span></td>
                        <td>San Vicente</td>
                        <td>Created 5 new resident profiles</td>
                        <td class="text-end pe-4 text-secondary">DATA ENTRY</td>
                    </tr>
                    <tr>
                        <td class="ps-4 text-nowrap">Oct 19, 2025 <span class="text-muted">|</span> 11:12 AM</td>
                        <td><span class="badge bg-light text-dark border">SK Secretary</span></td>
                        <td>San Isidro</td>
                        <td>Generated <strong>PDF</strong> report: Quarterly SK Fund</td>
                        <td class="text-end pe-4 text-secondary">REPORT</td>
                    </tr>
                    <tr>
                        <td class="ps-4 text-nowrap">Oct 18, 2025 <span class="text-muted">|</span> 08:25 PM</td>
                        <td><span class="badge bg-light text-muted border">System</span></td>
                        <td>-</td>
                        <td>Automated <strong>database backup</strong> completed</td>
                        <td class="text-end pe-4 text-secondary">SYSTEM</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- PAGINATION -->
        <div class="card-footer bg-white border-top d-flex justify-content-between align-items-center py-2">
            <small class="text-muted">Showing 1 to 20 of 1,245 entries</small>
            <ul class="pagination pagination-sm mb-0">
                <li class="page-item disabled"><a class="page-link" href="#">‹</a></li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">›</a></li>
            </ul>
        </div>
    </div>
</div>
