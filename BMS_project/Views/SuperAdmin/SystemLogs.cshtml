@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "System Logs";
}

<div class="container-fluid py-4">

    <!-- Page Header -->
    <div class="mb-4 pb-3 border-bottom">
        <h2 class="fw-bold text-dark mb-0">System Activity Logs</h2>
        <p class="text-secondary mt-1 mb-0">
            Monitor all administrative actions and changes within the system.
        </p>
    </div>

    <!-- Filters & Search -->
    <div class="d-flex justify-content-between align-items-center mb-4 pt-2 pb-3 border-top border-bottom">
        <div class="d-flex flex-wrap gap-2">
            <select class="form-select form-select-sm shadow-none w-auto">
                <option selected>Filter by Role</option>
                <option value="1">Super Admin</option>
                <option value="2">Barangay Chair</option>
            </select>

            <select class="form-select form-select-sm shadow-none w-auto">
                <option selected>Filter by Barangay</option>
                <option value="1">San Vicente</option>
            </select>

            <input type="text" class="form-control form-control-sm shadow-none w-auto" placeholder="Date Range" />
        </div>

         <div>
        <div class="input-group input-group-sm" style="width: 250px;">
            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" class="form-control border-start-0 shadow-none" placeholder="Search.........">
        </div>
    </div>
</div>

    <!-- Logs Table -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-dark fw-semibold">Date & Time</th>
                            <th class="text-dark fw-semibold">User</th>
                            <th class="text-dark fw-semibold">Barangay</th>
                            <th class="text-dark fw-semibold">Action Details</th>
                            <th class="text-dark fw-semibold text-end pe-4">Category</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="py-2 ps-4 text-nowrap">Oct 21, 2025 <span class="text-muted">|</span> 09:30 AM</td>
                            <td><span class="badge text-bg-dark fw-normal">Admin</span></td>
                            <td>All</td>
                            <td class="fw-medium text-dark">Reviewed and <strong>Updated</strong> security settings</td>
                            <td class="text-end pe-4 text-secondary">SECURITY</td>
                        </tr>
                        <tr>
                            <td class="py-2 ps-4 text-nowrap">Oct 20, 2025 <span class="text-muted">|</span> 03:45 PM</td>
                            <td><span class="badge text-bg-secondary fw-normal">Brgy. Chair - San Vicente</span></td>
                            <td>San Vicente</td>
                            <td class="text-dark">Created 5 new resident profiles</td>
                            <td class="text-end pe-4 text-secondary">DATA ENTRY</td>
                        </tr>
                        <tr>
                            <td class="py-2 ps-4 text-nowrap">Oct 19, 2025 <span class="text-muted">|</span> 11:12 AM</td>
                            <td><span class="badge bg-light text-dark border fw-normal">SK Secretary</span></td>
                            <td>San Isidro</td>
                            <td>Generated <strong>PDF</strong> report: Quarterly SK Fund</td>
                            <td class="text-end pe-4 text-secondary">REPORT</td>
                        </tr>
                        <tr>
                            <td class="py-2 ps-4 text-nowrap">Oct 18, 2025 <span class="text-muted">|</span> 08:25 PM</td>
                            <td><span class="badge text-bg-light text-muted fw-normal">System</span></td>
                            <td>-</td>
                            <td>Automated <strong>database backup</strong> completed</td>
                            <td class="text-end pe-4 text-secondary">SYSTEM</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        <div class="card-footer bg-white d-flex justify-content-between align-items-center border-top rounded-bottom-3">
            <small class="text-muted">Showing 1 to 20 of 1,245 entries</small>
            <nav aria-label="Logs Pagination">
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">‹</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">›</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
