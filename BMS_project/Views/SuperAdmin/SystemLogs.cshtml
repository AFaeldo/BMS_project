@model IEnumerable<BMS_project.Models.SystemLog>
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "System Logs";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">System Logs</h2>
    </div>

    <!-- Search Bar -->
    <div class="d-flex justify-content-end mb-3">
        <form method="get" asp-action="SystemLogs" class="d-flex" style="gap: 10px;">
            <input type="text" name="search" value="@ViewBag.Search"
                   class="form-control" placeholder="Search logs..."
                   style="width: 230px;" />
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </form>
    </div>

    <!-- Logs Table -->
    <div class="card shadow-sm" style="border-radius: 10px;">
        <div class="card-header bg-white" style="border-bottom: 2px solid #e8e8e8;">
            <h5 class="mt-1 mb-1 fw-semibold">Activity Logs</h5>
        </div>

        <div class="table-responsive p-2">
            <table class="table mb-0" style="border-collapse: separate; border-spacing: 0;">
                <thead style="background-color: #f8f9fc; border-bottom: 2px solid #e8e8e8;">
                    <tr>
                        <th class="py-3">Log ID</th>
                        <th class="py-3">User</th>
                        <th class="py-3">Activity</th>
                        <th class="py-3">Date & Time</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SysLog_id</td>
                                <td>
                                    @if(item.User != null) {
                                        @(item.User.Login?.Username ?? $"{item.User.First_Name} {item.User.Last_Name}")
                                    } else {
                                        <span class="text-muted">Unknown</span>
                                    }
                                </td>
                                <td>@item.Remark</td>
                                <td>@item.DateTime.ToString("MMM dd, yyyy hh:mm tt")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-3 text-muted">
                                No logs available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="card-footer bg-white">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center m-0">

                    <!-- Previous -->
                    <li class="page-item @(ViewBag.Page == 1 ? "disabled" : "")">
                        <a class="page-link"
                           href="@Url.Action("SystemLogs", new { page = ViewBag.Page - 1, search = ViewBag.Search })">
                            Previous
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= (ViewBag.TotalPages ?? 1); i++)
                    {
                        <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                            <a class="page-link"
                               href="@Url.Action("SystemLogs", new { page = i, search = ViewBag.Search })">
                                @i
                            </a>
                        </li>
                    }

                    <!-- Next -->
                    <li class="page-item @(ViewBag.Page == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           href="@Url.Action("SystemLogs", new { page = ViewBag.Page + 1, search = ViewBag.Search })">
                            Next
                        </a>
                    </li>

                </ul>
            </nav>
        </div>

    </div>
</div>