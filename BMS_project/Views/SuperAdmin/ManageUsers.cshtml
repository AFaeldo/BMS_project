@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid">
    <div class="row">


        <!-- FORM CARD -->
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Add / Edit User</h5>
                </div>

                <div class="card-body">
                    <form>
                        <div class="row g-3">
                            <!-- Name Fields -->
                            <div class="col-md-4">
                                <label for="lastName" class="form-label fw-semibold">Last Name</label>
                                <input type="text" id="lastName" class="form-control" placeholder="Enter last name">

                                <label for="firstName" class="form-label fw-semibold mt-3">First Name</label>
                                <input type="text" id="firstName" class="form-control" placeholder="Enter first name">
                            </div>

                            <!-- Email -->
                            <div class="col-md-4">
                                <label for="email" class="form-label fw-semibold">Email</label>
                                <input type="email" id="email" class="form-control" placeholder="Enter email address">
                            </div>

                            <!-- Barangay -->
                            <div class="col-md-4">
                                <label for="barangaySelect" class="form-label fw-semibold">Barangay</label>
                                <select id="barangaySelect" class="form-select">
                                    <option selected disabled>Select Barangay</option>
                                    <!-- Barangay options will be loaded dynamically -->
                                </select>
                            </div>

                            <!-- Role -->
                            <div class="col-md-4">
                                <label for="roleSelect" class="form-label fw-semibold">Role</label>
                                <select id="roleSelect" class="form-select">
                                    <option selected disabled>Select Role</option>
                                    <option>SK Chairperson</option>
                                    <option>Secretary</option>
                                    <option>Treasurer</option>
                                </select>
                            </div>

                            <!-- Username -->
                            <div class="col-md-4">
                                <label for="username" class="form-label fw-semibold">Username</label>
                                <input type="text" id="username" class="form-control" placeholder="Enter username">
                            </div>

                            <!-- Password -->
                            <div class="col-md-4">
                                <label for="password" class="form-label fw-semibold">Password</label>
                                <input type="password" id="password" class="form-control" placeholder="Enter password">
                            </div>

                            <!-- Buttons -->
                            <div class="col-12 text-end mt-3">
                                <button type="submit" class="btn btn-success px-4 me-2">
                                    <i class="bi bi-save me-1"></i> Save
                                </button>
                                <button type="reset" class="btn btn-secondary px-4">
                                    <i class="bi bi-x-circle me-1"></i> Clear
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <!-- USER LIST TABLE -->
        <div class="col-12 mt-5">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0 fw-bold">Registered Users</h5>
                </div>
                <div class="card-body">
                    <table class="table table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Id</th>
                                <th>Last Name</th>
                                <th>First Name</th>
                                <th>Barangay</th>
                                <th>Role</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Dela Cruz</td>
                                <td>Juan</td>
                                <td>Barangay I</td>
                                <td>SK Chairperson</td>
                                <td>juan@example.com</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">Edit</button>
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>Santos</td>
                                <td>Maria</td>
                                <td>Barangay II</td>
                                <td>Secretary</td>
                                <td>maria@example.com</td>
                                <td>
                                    <button class="btn btn-sm btn-primary">Edit</button>
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    fetch('/Jsons/barangays.json')
  .then(response => response.json())
  .then(data => {
    const select = document.getElementById("barangaySelect");

    // Clear existing options (if any)
    select.innerHTML = "";

    // Add default option
    const defaultOption = document.createElement("option");
    defaultOption.text = "Select Barangay";
    defaultOption.disabled = true;
    defaultOption.selected = true;
    select.add(defaultOption);

    // Loop through JSON and add options
    data.barangays.forEach(barangay => {
      const option = document.createElement("option");
      option.text = barangay;
      select.add(option);
    });
  })
  .catch(error => console.error('Error loading JSON:', error));
</script>
