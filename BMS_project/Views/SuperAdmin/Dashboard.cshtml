@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Super Admin Dashboard</h2>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <!-- Total Barangays -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-city fs-2 text-primary mb-2"></i>
                    <h6 class="text-muted mb-1">Total Barangay</h6>
                    <h3 class="fw-bold mb-0">0</h3>
                </div>
            </div>
        </div>

        <!-- users -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-circle-check fs-2 text-success mb-2"></i>
                    <h6 class="text-muted mb-1">Active Users</h6>
                    <h3 class="fw-bold mb-0">0</h3>
                </div>
            </div>
        </div>

        <!-- Pending Reports-->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-hourglass-half fs-2 text-warning mb-2"></i>
                    <h6 class="text-muted mb-1">Last Backup</h6>
                    <h3 class="fw-bold mb-0">0</h3>
                </div>
            </div>
        </div>

        <!-- System Alerts -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-diagram-project fs-2 text-info mb-2"></i>
                    <h6 class="text-muted mb-1">System Alerts</h6>
                    <h3 class="fw-bold mb-0">0</h3>
                </div>
            </div>
        </div>
    </div>

   <!-- Activity & Logs -->
    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header fw-bold">Recent SK Activities</div>
                <div class="card-body">
                  
                </div>
            </div>
        </div>

        <!-- Right Panel: System Logs or Calendar -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header fw-bold ">System Logs</div>
                <div class="card-body overflow-auto" style="max-height: 400px;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fa-solid fa-user-plus text-primary me-2"></i> New SK account created</li>
                        <li class="list-group-item"><i class="fa-solid fa-file-upload text-success me-2"></i> File uploaded by Barangay II</li>
                        <li class="list-group-item"><i class="fa-solid fa-lock text-danger me-2"></i> Unauthorized access attempt blocked</li>
                    </ul>
                </div>
            </div>
        </div>
