@model BMS_project.ViewModels.DashboardViewModel
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Super Admin Dashboard</h2>
    </div>

    <!-- MESSAGES -->
    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
else if (TempData["DashboardErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["DashboardErrorMessage"]</div>
    }

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <!-- Total Barangays -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-city fs-2 text-primary mb-2"></i>
                    <h6 class="text-muted mb-1">Total Barangay</h6>
                    <h3 class="fw-bold mb-0">@((Model?.TotalBarangays) ?? 0)</h3>
                </div>
            </div>
        </div>

        <!-- users -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-circle-check fs-2 text-success mb-2"></i>
                    <h6 class="text-muted mb-1">Total Users</h6>
                    <h3 class="fw-bold mb-0">@((Model?.TotalUsers) ?? 0)</h3>
                </div>
            </div>
        </div>

        <!-- Federation Fund -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-sack-dollar fs-2 text-warning mb-2"></i>
                    <h6 class="text-muted mb-1">Federation Fund</h6>
                    <h3 class="fw-bold mb-0">@Model.FederationFundAmount.ToString("C", new System.Globalization.CultureInfo("en-PH"))</h3>
                </div>
            </div>
        </div>

        <!-- Current Term -->
        <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3 text-center py-3">
                <div class="card-body">
                    <i class="fa-solid fa-calendar-days fs-2 text-info mb-2"></i>
                    <h6 class="text-muted mb-1">Current Term</h6>
                    <h3 class="fw-bold mb-0">@Model?.CurrentTerm</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities and System Logs -->
    <div class="row g-3">
        <!-- Recent Activities (Left Column) -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="fw-bold">Recent SK Activities</div>
                    <button id="clearActivities" class="btn btn-sm btn-danger">Clear</button>
                </div>
                <div class="card-body">
                    <ul id="activityList" class="list-group list-group-flush">
                       
                    </ul>
                </div>
            </div>
        </div>

        <!-- System Control (Right Column) -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header fw-bold">System Control</div>
                <div class="card-body d-flex justify-content-center">
                    <div class="d-flex flex-wrap gap-2 justify-content-center w-100">

                        <button type="button" class="btn btn-primary btn-sm w-100 d-flex align-items-center justify-content-center"
                                data-bs-toggle="modal" data-bs-target="#modalTermManagement">
                            <i class="bi bi-calendar-range me-1"></i> Term Management
                        </button>

                        <button type="button" class="btn btn-success btn-sm w-100 d-flex align-items-center justify-content-center"
                                data-bs-toggle="modal" data-bs-target="#modalSetFund">
                            <i class="bi bi-plus-circle-dotted me-1"></i> Add Federation Fund
                        </button>

                        <a asp-controller="SystemLogs" asp-action="Index"
                           class="btn btn-outline-secondary btn-sm w-100 d-flex align-items-center justify-content-center">
                            <i class="bi bi-journal-text me-1"></i> View Logs
                        </a>

                        <a asp-controller="SuperAdmin" asp-action="BackupMaintenance"
                           class="btn btn-warning btn-sm w-100 d-flex align-items-center justify-content-center">
                            <i class="bi bi-cloud-arrow-up-fill me-1"></i> Backup Now
                        </a>

                        <button type="button"
                                class="btn btn-danger btn-sm w-100 d-flex align-items-center justify-content-center"
                                data-bs-toggle="modal" data-bs-target="#resetModalCompact"
                                title="Reset all accounts">
                            <i></i> Create Announcement
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


<!-- MODAL: TERM MANAGEMENT -->
<div class="modal fade" id="modalTermManagement" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-3">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-calendar-range"></i> Term Management</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                
                <!-- Top Actions -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="fw-bold text-muted mb-0">Term Periods</h6>
                    <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#modalAddTerm" data-bs-dismiss="modal">
                        <i class="bi bi-plus-lg"></i> Add Term
                    </button>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Term Name</th>
                                <th>Start Date</th>
                                <th>Official End Date</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.AllTerms != null && Model.AllTerms.Any())
                            {
                                foreach (var term in Model.AllTerms)
                                {
                                    <tr>
                                        <td>@term.Term_Name</td>
                                        <td>@term.Start_Date.ToString("MMM dd, yyyy")</td>
                                        <td>@term.Official_End_Date.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (term.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="d-flex justify-content-end gap-2">
                                                <!-- Set Active Button -->
                                                @if (!term.IsActive)
                                                {
                                                    <form asp-action="SetActiveTerm" method="post" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@term.Term_ID" />
                                                        <button type="submit" class="btn btn-sm btn-outline-primary" title="Set Active">
                                                            <i class="bi bi-check2-circle"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary" disabled>
                                                        <i class="bi bi-check2-circle"></i>
                                                    </button>
                                                }

                                                <!-- Edit Button -->
                                                @if (term.IsActive)
                                                {
                                                    <button class="btn btn-sm btn-outline-warning" 
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#modalEditTerm-@term.Term_ID"
                                                            data-bs-dismiss="modal">
                                                        <i class="bi bi-pencil-square"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">No terms found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL: ADD TERM (Nested/Separate) -->
<div class="modal fade" id="modalAddTerm" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-action="AddTerm" method="post" class="modal-content shadow-lg border-0 rounded-3">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-plus-circle"></i> Add New Term</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Term Name</label>
                    <input type="text" name="TermName" class="form-control" placeholder="e.g., 2025-2028 Term" required />
                </div>
                <div class="row g-2">
                    <div class="col-6">
                        <label class="form-label fw-bold">Start Date</label>
                        <input type="date" name="StartDate" class="form-control" required />
                    </div>
                    <div class="col-6">
                        <label class="form-label fw-bold">Official End Date</label>
                        <input type="date" name="EndDate" class="form-control" required />
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#modalTermManagement">Back</button>
                <button type="submit" class="btn btn-success">Save Term</button>
            </div>
        </form>
    </div>
</div>

<!-- EDIT MODALS (Generated for each active term - typically better via AJAX but for now inline loop) -->
@if (Model.AllTerms != null)
{
    foreach (var term in Model.AllTerms.Where(t => t.IsActive))
    {
        <div class="modal fade" id="modalEditTerm-@term.Term_ID" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <form asp-action="EditTerm" method="post" class="modal-content shadow-lg border-0 rounded-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Term_ID" value="@term.Term_ID" />
                    <div class="modal-header bg-warning text-dark">
                        <h5 class="modal-title"><i class="bi bi-pencil-square"></i> Edit Active Term</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Term Name</label>
                            <input type="text" name="TermName" class="form-control" value="@term.Term_Name" required />
                        </div>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="form-label fw-bold">Start Date</label>
                                <input type="date" name="StartDate" class="form-control" value="@term.Start_Date.ToString("yyyy-MM-dd")" required />
                            </div>
                            <div class="col-6">
                                <label class="form-label fw-bold">Official End Date</label>
                                <input type="date" name="EndDate" class="form-control" value="@term.Official_End_Date.ToString("yyyy-MM-dd")" required />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#modalTermManagement">Back</button>
                        <button type="submit" class="btn btn-warning">Update Term</button>
                    </div>
                </form>
            </div>
        </div>
    }
}

<!-- MODAL: ADD FEDERATION FUND -->
<div class="modal fade" id="modalSetFund" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-controller="Funds" asp-action="SetTotalBudget" method="post" class="modal-content shadow-lg border-0 rounded-3">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-cash-stack"></i> Add Federation Fund</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info">
                    <small><i class="bi bi-info-circle"></i> This amount will be added to the existing Federation Fund for the current term.</small>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">Amount to Add (PHP)</label>
                    <input type="number" step="0.01" name="amount" class="form-control" placeholder="0.00" required />
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success">Add Funds</button>
            </div>
        </form>
    </div>
</div>

    <script>
        // Clear Recent SK Activities
        document.getElementById('clearActivities').addEventListener('click', function() {
            document.getElementById('activityList').innerHTML = '';
        });
    </script>
