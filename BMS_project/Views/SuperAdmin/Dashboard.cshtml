@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">

    <!-- HEADER -->
     <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Super Admin Dashboard</h2>
    </div>

    <!-- KPI SUMMARY CARDS -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Barangays</h6>
                    <h2 class="fw-bold text-primary">62</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Active Users</h6>
                    <h2 class="fw-bold text-success">186</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Pending Reports</h6>
                    <h2 class="fw-bold text-warning">8</h2>
                </div>
            </div>
        </div>
         <div class="col-md-3">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">System Alerts</h6>
                            <h3 class="fw-bold">3</h3>
                        </div>
                        <i class="fa-solid fa-triangle-exclamation fs-2 text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

   <!-- Activity & Logs -->
    <div class="row g-3">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white fw-bold">Recent SK Activities</div>
                <div class="card-body">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Barangay</th>
                                <th>Activity</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Barangay San Vicente</td>
                                <td>Submitted Project Proposal</td>
                                <td><span class="badge bg-success">Approved</span></td>
                                <td>Oct 20, 2025</td>
                            </tr>
                            <tr>
                                <td>Barangay Lalud</td>
                                <td>Budget Request</td>
                                <td><span class="badge bg-warning">Pending</span></td>
                                <td>Oct 19, 2025</td>
                            </tr>
                            <tr>
                                <td>Barangay Guinobatan</td>
                                <td>Minutes of Meeting</td>
                                <td><span class="badge bg-secondary">Submitted</span></td>
                                <td>Oct 18, 2025</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Right Panel: System Logs or Calendar -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white fw-bold">System Logs</div>
                <div class="card-body overflow-auto" style="max-height: 400px;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="fa-solid fa-user-plus text-primary me-2"></i> New SK account created</li>
                        <li class="list-group-item"><i class="fa-solid fa-file-upload text-success me-2"></i> File uploaded by Barangay II</li>
                        <li class="list-group-item"><i class="fa-solid fa-lock text-danger me-2"></i> Unauthorized access attempt blocked</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>