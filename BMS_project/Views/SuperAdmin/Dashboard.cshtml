@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Super Admin Dashboard</h2>
        <p class="text-muted">Overview of SK operations across all 62 barangays in Calapan City.</p>
    </div>

    <!-- KPI SUMMARY CARDS -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Barangays</h6>
                    <h2 class="fw-bold text-primary">62</h2>
                    <p class="text-muted small">Active SK Councils</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Active Users</h6>
                    <h2 class="fw-bold text-success">186</h2>
                    <p class="text-muted small">Chairpersons, Secretaries, Treasurers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Pending Reports</h6>
                    <h2 class="fw-bold text-warning">8</h2>
                    <p class="text-muted small">Awaiting Submission</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm border-0">
                <div class="card-body">
                    <h6 class="text-uppercase text-muted">Last Backup</h6>
                    <h5 class="fw-bold text-dark">Oct 20, 2025</h5>
                    <p class="text-muted small">System is backed up</p>
                </div>
            </div>
        </div>
    </div>

    <!-- COMPLIANCE & ACTIVITY OVERVIEW -->
    <div class="row g-4 mb-4">
        <!-- COMPLIANCE CHART -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>Compliance Tracker</strong>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-2">Barangays that submitted required documents:</p>
                    <div class="progress mb-3">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 85%;">85%</div>
                    </div>
                    <ul class="small">
                        <li><strong>Meeting Minutes:</strong> 56/62 submitted</li>
                        <li><strong>Youth Profiles:</strong> 59/62 submitted</li>
                        <li><strong>Budget Reports:</strong> 53/62 submitted</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- RECENT ACTIVITY -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>Recent Activity</strong>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item">📥 SK Chair - Sta. Isabel uploaded Youth Profile (Oct 21)</li>
                        <li class="list-group-item">💰 Treasurer - Biga submitted Budget Report (Oct 20)</li>
                        <li class="list-group-item">📝 Secretary - Camansihan added meeting minutes (Oct 19)</li>
                        <li class="list-group-item">🔐 Security audit performed by Admin (Oct 18)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- QUICK ACTIONS & SECURITY -->
    <div class="row g-4 mb-4">
        <!-- QUICK ACTIONS -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>Quick Actions</strong>
                </div>
                <div class="card-body text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-3">
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-person-plus"></i> Add New User
                        </button>
                        <button class="btn btn-outline-success btn-sm">
                            <i class="bi bi-person-badge"></i> Assign Roles
                        </button>
                        <button class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-download"></i> Download Report
                        </button>
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-shield-lock"></i> Run Security Audit
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- SECURITY STATUS -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light">
                    <strong>System Security</strong>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush small">
                        <li class="list-group-item text-success">✅ All systems operational</li>
                        <li class="list-group-item text-warning">⚠️ 2 failed login attempts (Oct 20)</li>
                        <li class="list-group-item">🔑 Last password update: 18 days ago</li>
                        <li class="list-group-item">💾 Last system backup: Oct 20, 2025</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
