@model IEnumerable<BMS_project.Models.Barangay>
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Manage Barangay";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Barangay Management</h2>
    </div>

    <!-- MESSAGES -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- ADD BUTTON -->
    <div class="col-12 text-end mb-3">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#barangayModal">
            <i class="bi bi-plus-circle me-1"></i> Add Barangay
        </button>
    </div>

    <!-- TABLE -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-bold">List of Barangay</h5>
        </div>

        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Barangay Name</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var b in Model)
                            {
                                <tr>
                                    <td>@b.Barangay_Name</td>
                                    <td class="text-center">
                                        <!-- placeholder for future Edit/Delete -->
                                        <button class="btn btn-sm btn-outline-secondary" disabled>Edit</button>
                                        <button class="btn btn-sm btn-outline-danger" disabled>Delete</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">No barangays found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- MODAL: ADD / EDIT BARANGAY -->
<div class="modal fade" id="barangayModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <form asp-action="AddBarangay" asp-controller="SuperAdmin" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add Barangay</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Barangay Name</label>
                        <input type="text" class="form-control" name="BarangayName" placeholder="Enter Barangay name" required>
                    </div>
                    <!-- optional fields kept for UI but not saved (remove if not needed) -->
                    <div class="col-md-6">
                        <label class="form-label">Zone / District</label>
                        <input type="text" class="form-control" name="Zone" placeholder="Enter Zone or District" disabled>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date Implemented</label>
                        <input type="date" class="form-control" name="DateImplemented" disabled>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </form>
    </div>

</div>
