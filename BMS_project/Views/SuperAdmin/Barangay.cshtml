@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Manage Barangay";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Barangay Management</h2>
    </div>

    <!-- ADD BUTTON -->
    <div class="col-12 text-end mb-3">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#barangayModal">
            <i class="bi bi-plus-circle me-1"></i> Add Barangay
        </button>
    </div>

    <!-- TABLE -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-bold">List of Barangay</h5>
        </div>

        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Barangay Name</th>
                            <th>Zone / District</th>
                            <th>Date Implemented</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- MODAL: ADD / EDIT BARANGAY -->
<div class="modal fade" id="barangayModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <form class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add / Edit Barangay</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Barangay Name</label>
                        <input type="text" class="form-control" name="BarangayName" placeholder="Enter Barangay name" required>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Zone / District</label>
                        <input type="text" class="form-control" name="Zone" placeholder="Enter Zone or District">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date Implemented</label>
                        <input type="date" class="form-control" name="DateImplemented" required>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
