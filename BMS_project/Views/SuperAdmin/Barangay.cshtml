@model IEnumerable<BMS_project.Models.Barangay>
@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Manage Barangay";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Barangay Management</h2>
    </div>

    <!-- MESSAGES -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- Search + Add button row -->
    <div class="d-flex justify-content-between align-items-center mb-3">

        <!-- Search Form -->
        <form asp-action="Barangay" asp-controller="SuperAdmin" method="get" class="d-flex" style="gap: 10px;">
            <input type="text"
                   id="searchText"
                   name="search"
                   value="@ViewBag.Search"
                   class="form-control"
                   placeholder="Search....."
                   style="width: 230px;" />
            <button type="submit" class="btn btn-primary">
                Search
            </button>
        </form>

        <!-- Add Barangay Button -->
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#barangayModal">
            <i class="bi bi-plus-circle me-1"></i> Add Barangay
        </button>

    </div>

    <!-- TABLE -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-bold">List of Barangay</h5>
        </div>

        <div class="card-body p-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Barangay Name</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var b in Model)
                            {
                                <tr>
                                    <td>@b.Barangay_Name</td>
                                    <td class="text-center">
                                        <button class="btn btn-sm btn-warning text-white btn-edit" disabled>
                                            <i class="bi bi-pencil-square"></i> Edit </button>
                                        <button class="btn btn-sm btn-danger btn-delete" disabled>
                                            <i class="bi bi-trash"></i> Delete</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">No barangays found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- PAGINATION -->
    <div class="d-flex justify-content-end mt-3 mb-4">
        <ul class="pagination">

            <!-- PREVIOUS -->
            <li class="page-item @(ViewBag.Page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Barangay", new { page = ViewBag.Page - 1, search = ViewBag.Search })">
                    Previous
                </a>
            </li>

            <!-- PAGE NUMBERS -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Barangay", new { page = i, search = ViewBag.Search })">
                        @i
                    </a>
                </li>
            }

            <!-- NEXT -->
            <li class="page-item @(ViewBag.Page >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   href="@Url.Action("Barangay", new { page = ViewBag.Page + 1, search = ViewBag.Search })">
                    Next
                </a>
            </li>

        </ul>
    </div>

</div>

<!-- MODAL: ADD BARANGAY -->
<div class="modal fade" id="barangayModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <form asp-action="AddBarangay" asp-controller="SuperAdmin" method="post" class="modal-content">
            @Html.AntiForgeryToken()
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Add Barangay</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <div class="row g-3">
                    <div class="col-md-12">
                        <label class="form-label">Barangay Name</label>
                        <input type="text" class="form-control" name="BarangayName" placeholder="Enter Barangay name" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Zone / District</label>
                        <input type="text" class="form-control" disabled>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date Implemented</label>
                        <input type="date" class="form-control" disabled>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal" type="button">Cancel</button>
                <button class="btn btn-success" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>
