@{
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
    ViewData["Title"] = "Backup & Maintenance";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <strong>System Backup</strong>
        </div>
        <div class="card-body">
            <p>Ensure data integrity through regular backups of user data and records.</p>
            <button class="btn btn-success mb-2">Create Backup Now</button>
            <button class="btn btn-outline-secondary mb-2">View Backup History</button>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-header bg-info text-white">
            <strong>System Maintenance</strong>
        </div>
        <div class="card-body">
            <p>Monitor server performance, clear logs, and check system health.</p>
            <button class="btn btn-primary">Run Maintenance Check</button>
            <button class="btn btn-outline-danger">Clear Old Logs</button>
        </div>
    </div>
</div>
