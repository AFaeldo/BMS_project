@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Document Uploads";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
             <strong>Document & Records Management</strong> @* titlekineme *@
        </div>
        <div class="card-body">
            <p>Upload meeting minutes, project reports, and budget documents. Archive old files for record-keeping.</p>
            <form>
                <div class="mb-3">
                    <label class="form-label">Select Document</label>
                    <input type="file" class="form-control">
                </div>
                <button class="btn btn-secondary text-white">Upload Document</button>
            </form>

            <hr />
            <h6 class="fw-bold">Recent Uploads</h6>
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    SK Meeting Minutes - Sept 2025
                    <span class="badge bg-primary">PDF</span>
                </li>
            </ul>
        </div>
    </div>
</div>
