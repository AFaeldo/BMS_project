@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <h3 class="fw-bold mb-4 text-primary">
        <i class="bi bi-speedometer2 me-2"></i> SK Barangay Admin Dashboard
    </h3>

    <!-- KPI Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm border-0 hover-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-primary">
                        <i class="bi bi-people-fill fs-2"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">Total Youth Registered</h6>
                        <h3 class="fw-bold mb-0">1,245</h3>
                        <small class="text-muted">Updated today</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 hover-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-success">
                        <i class="bi bi-check-circle-fill fs-2"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">Approved Projects</h6>
                        <h3 class="fw-bold mb-0">8</h3>
                        <small class="text-muted">This month</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 hover-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-warning">
                        <i class="bi bi-hourglass-split fs-2"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">Pending Reports</h6>
                        <h3 class="fw-bold mb-0">3</h3>
                        <small class="text-muted">Requires attention</small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm border-0 hover-card">
                <div class="card-body d-flex align-items-center">
                    <div class="me-3 text-danger">
                        <i class="bi bi-exclamation-triangle-fill fs-2"></i>
                    </div>
                    <div>
                        <h6 class="mb-0">Audit Flags</h6>
                        <h3 class="fw-bold mb-0">2</h3>
                        <small class="text-muted">Detected issues</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overview Section -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-header bg-primary text-white">
            <strong><i class="bi bi-info-circle-fill me-2"></i>Barangay Overview</strong>
        </div>
        <div class="card-body">
            <p class="text-secondary mb-0">
                Welcome to the SK Barangay Dashboard. From here, you can manage youth records,
                track project proposals, review reports, and ensure SK compliance with auditing tools.
            </p>
        </div>
    </div>

    <!-- Modules Overview -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-folder2-open me-2 text-primary"></i>Document & Records Management
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 text-secondary">
                        <li><i class="bi bi-file-earmark-arrow-up me-2 text-primary"></i>Upload and store meeting minutes, proposals, and reports</li>
                        <li><i class="bi bi-archive-fill me-2 text-primary"></i>Archive outdated documents</li>
                        <li><i class="bi bi-calendar-event me-2 text-primary"></i>Manage barangay events and schedules</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-person-lines-fill me-2 text-success"></i>Youth Profiling
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 text-secondary">
                        <li><i class="bi bi-person-plus me-2 text-success"></i>Register youth constituents by barangay</li>
                        <li><i class="bi bi-filter-circle me-2 text-success"></i>Auto-filter 30+ years old</li>
                        <li><i class="bi bi-bar-chart-line me-2 text-success"></i>Generate demographic reports</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-file-earmark-bar-graph me-2 text-warning"></i>Automated Report Generation
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 text-secondary">
                        <li><i class="bi bi-filetype-pdf me-2 text-warning"></i>Generate standardized SK reports</li>
                        <li><i class="bi bi-calendar3 me-2 text-warning"></i>Quarterly submission-ready reports</li>
                        <li><i class="bi bi-download me-2 text-warning"></i>Export to PDF or Word</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-clipboard-check-fill me-2 text-danger"></i>Automated Auditing Features
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 text-secondary">
                        <li><i class="bi bi-search me-2 text-danger"></i>Verify budget completeness and compliance</li>
                        <li><i class="bi bi-exclamation-octagon me-2 text-danger"></i>Identify duplicate entries</li>
                        <li><i class="bi bi-clipboard-data me-2 text-danger"></i>Ensure proper expense categorization</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional Custom CSS -->
<style>
    .hover-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }
</style>
