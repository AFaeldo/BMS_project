@model BMS_project.ViewModels.DashboardViewModel

@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- PAGE HEADER -->
    <div class="mb-4 d-flex justify-content-between align-items-center">
        <h2 class="fw-bold">SK Barangay Dashboard</h2>
        <form method="get" asp-action="Dashboard" class="d-flex align-items-center">
            <label class="me-2 fw-semibold">Term:</label>
            <select name="termId" class="form-select form-select-sm" onchange="this.form.submit()" style="width: 200px;">
                @foreach (var term in Model.AllTerms)
                {
                    <option value="@term.Term_ID" selected="@(term.Term_ID == Model.SelectedTermId)">
                        @term.Term_Name @(term.IsActive ? "(Active)" : "")
                    </option>
                }
            </select>
        </form>
    </div>

    <!-- KPI CARDS -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h6 class="fw-semibold mb-1">Total Youth Registered</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalYouth</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h6 class="fw-semibold mb-1">Approved Projects</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalApprovedProjects</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h6 class="fw-semibold mb-1">Ongoing Projects</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalOngoingProjects</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center border-0 shadow-sm bg-white text-dark">
                <div class="card-body">
                    <h6 class="fw-semibold mb-1">Pending Projects</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalPendingProjects</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <!-- LEFT SIDE: Calendar (Approved Projects) -->
        <div class="col-md-8">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white fw-bold text-primary">
                    <i class="bi bi-calendar-event me-2"></i> Project Calendar
                </div>
                <div class="card-body p-3">
                    <div id='calendar'></div>
                </div>
            </div>
        </div>

        <!-- RIGHT SIDE: Sex Chart and Project Status Chart -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-50 mb-3">
                <div class="card-header bg-white fw-bold text-dark">Sex Distribution</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <canvas id="sexChart" style="max-height: 200px;"></canvas>
                </div>
            </div>
            <div class="card shadow-sm border-0 h-50">
                <div class="card-header bg-white fw-bold text-dark">Project Status Distribution</div>
                <div class="card-body d-flex align-items-center justify-content-center">
                    <canvas id="projectStatusChart" style="max-height: 200px;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Charts Beneath -->
    <div class="row g-4 mt-3 mb-5">
        <!-- Age Chart -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold text-dark">Age Distribution</div>
                <div class="card-body">
                    <canvas id="ageChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Sitio Chart -->
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white fw-bold text-dark">Youth per Sitio</div>
                <div class="card-body">
                    <canvas id="sitioChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- COMPLIANCE ALERT MODAL -->
@if (ViewBag.OverdueCompliance != null)
{
    <div class="modal fade" id="complianceAlertModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4 border-start border-danger border-5">
                <div class="modal-header bg-light">
                    <h5 class="modal-title fw-bold text-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> Compliance Alert
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="fw-semibold">The following requirements are overdue or due today:</p>
                    <ul class="list-group list-group-flush">
                        @foreach (var item in ViewBag.OverdueCompliance)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center text-danger">
                                <span>@item.Title</span>
                                <span class="badge bg-danger rounded-pill">@item.Due_Date.ToString("MMM dd, yyyy")</span>
                            </li>
                        }
                    </ul>
                    <div class="mt-3 text-end">
                        <a href="@Url.Action("Compliance", "BarangaySk")" class="btn btn-sm btn-primary">Go to Compliance Page</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <!-- Load Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Load FullCalendar -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            // Show Compliance Alert Modal if data exists
            var complianceModalEl = document.getElementById('complianceAlertModal');
            if (complianceModalEl) {
                var modal = new bootstrap.Modal(complianceModalEl);
                modal.show();
            }

            // ===============================
            // FULL CALENDAR SETUP
            // ===============================
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,listMonth'
                },
                height: 450,
                events: @Html.Raw(Model.CalendarEvents) // Injected from Model
            });
            calendar.render();

            // ===============================
            // CHARTS DATA
            // ===============================
            
            // SEX CHART
            const sexLabels = @Html.Raw(Model.SexDistributionLabels);
            const sexData = @Html.Raw(Model.SexDistributionData);
            
            new Chart(document.getElementById('sexChart'), {
                type: 'pie',
                data: {
                    labels: sexLabels,
                    datasets: [{
                        data: sexData,
                        backgroundColor: ['#4e73df', '#e83e8c', '#36b9cc'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });

            // PROJECT STATUS CHART
            const projectStatusData = @Html.Raw(Model.ProjectStatusData);
            
            new Chart(document.getElementById('projectStatusChart'), {
                type: 'pie',
                data: {
                    labels: ['Approved', 'Ongoing', 'Pending'],
                    datasets: [{
                        data: projectStatusData,
                        backgroundColor: ['#198754', '#0dcaf0', '#ffc107'], // Success (Green), Info (Cyan), Warning (Yellow)
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });

            // AGE CHART
            const ageLabels = @Html.Raw(Model.AgeDistributionLabels);
            const ageData = @Html.Raw(Model.AgeDistributionData);

            new Chart(document.getElementById('ageChart'), {
                type: 'bar',
                data: {
                    labels: ageLabels,
                    datasets: [{
                        label: 'Youth Count',
                        data: ageData,
                        backgroundColor: '#1cc88a'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true, ticks: { stepSize: 1 } }
                    }
                }
            });

            // SITIO CHART
            const sitioLabels = @Html.Raw(Model.SitioDistributionLabels);
            const sitioData = @Html.Raw(Model.SitioDistributionData);

            new Chart(document.getElementById('sitioChart'), {
                type: 'bar',
                data: {
                    labels: sitioLabels,
                    datasets: [{
                        label: 'Youth Count',
                        data: sitioData,
                        backgroundColor: '#36b9cc'
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: { beginAtZero: true, ticks: { stepSize: 1 } }
                    }
                }
            });
        });
    </script>
}
