@model IEnumerable<BMS_project.Models.YouthMember>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <table class="table table-bordered table-hover align-middle mb-0">
            <thead class="table-primary text-center">
                <tr>
                    <th>Member ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Sitio</th>
                    <th>Birthdate</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @if (Model != null && Model.Any())
                {
                    foreach (var y in Model)
                    {
                        <tr>
                            <td>@("Y" + y.Member_ID.ToString("D3"))</td>
                            <td>@y.FirstName</td>
                            <td>@y.LastName</td>
                            <td>@y.Age</td>
                            <td>@y.Gender</td>
                            <td>@y.Sitio</td>
                            <td>@y.Birthday.ToString("yyyy-MM-dd")</td>
                            <td>
                                <button class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">No youth members found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>