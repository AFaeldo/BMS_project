@model IEnumerable<BMS_project.ViewModels.ProjectListViewModel>
@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Project Management";
}

<div class="container-fluid">

    <!-- PAGE HEADER -->
    <div class="mb-4">
        <h2 class="fw-bold">Project Management</h2>
    </div>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    @* -- CARRY-OVER SECTION -- *@
    @{
        var carryOver = ViewBag.CarryOverCandidates as List<BMS_project.ViewModels.ProjectListViewModel>;
    }
    @if (carryOver != null && carryOver.Any())
    {
        <div class="card shadow-sm border-0 mb-4 border-start border-warning border-5">
            <div class="card-header bg-light">
                <h5 class="fw-bold text-warning mb-0"><i class="bi bi-exclamation-circle-fill me-2"></i>Action Required: Projects from Previous Term</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">The following projects are still marked as <strong>Approved</strong> or <strong>Ongoing</strong> but belong to a previous term. Please decide whether to continue them (using current term's budget) or terminate them.</p>
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-warning">
                            <tr>
                                <th>Project Title</th>
                                <th>Description</th>
                                <th>Previous Budget</th>
                                <th>Status</th>
                                <th class="text-center">Decision</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in carryOver)
                            {
                                <tr>
                                    <td class="fw-bold">@item.Project_Title</td>
                                    <td>@item.Project_Description</td>
                                    <td>@item.Allocated_Budget.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                                    <td><span class="badge bg-info text-dark">@item.Project_Status</span></td>
                                    <td class="text-center">
                                        <form method="post" asp-action="DecideOnCarryOver" class="d-flex justify-content-center gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="projectId" value="@item.Project_ID" />
                                            
                                            <button type="submit" name="decision" value="Continue" class="btn btn-sm btn-success" 
                                                    title="Claim & Continue (Deduct from Current Budget)"
                                                    onclick="return confirm('Are you sure? This will deduct the estimated cost from your CURRENT term budget.')">
                                                <i class="bi bi-check-circle-fill me-1"></i> Claim
                                            </button>
                                            
                                            <button type="submit" name="decision" value="Terminate" class="btn btn-sm btn-danger" 
                                                    title="Terminate & Archive"
                                                    onclick="return confirm('Are you sure you want to terminate this project?')">
                                                <i class="bi bi-x-circle-fill me-1"></i> Terminate
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="col-12 text-end mb-3">
        <button class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#archivedProjectsModal">
            <i class="bi bi-archive"></i> View Archived Projects
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addProjectModal">
            <i class="bi bi-plus-circle"></i> Add Project
        </button>
    </div>

    <!-- Project List -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3 fw-semibold">Project List</h5>
            <table class="table table-hover align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Project Title</th>
                        <th>Description</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Alloted Budget</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var project in Model)
                        {
                            <tr>
                                <td>@project.Project_Title</td>
                                <td>@project.Project_Description</td>
                                <td>@(project.Start_Date?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>@(project.End_Date?.ToString("yyyy-MM-dd") ?? "-")</td>
                                <td>@project.Allocated_Budget.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                                <td>
                                    @if (project.Project_Status == "Completed")
                                    {
                                        <span class="badge bg-success">Completed</span>
                                    }
                                    else if (project.Project_Status == "Ongoing" || project.Project_Status == "Approved")
                                    {
                                        <span class="badge bg-info text-dark">@project.Project_Status</span>
                                    }
                                    else if (project.Project_Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@project.Project_Status</span>
                                    }
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-warning text-white btn-edit"
                                            data-id="@project.Project_ID"
                                            data-title="@project.Project_Title"
                                            data-desc="@project.Project_Description"
                                            data-start="@(project.Start_Date?.ToString("yyyy-MM-dd"))"
                                            data-end="@(project.End_Date?.ToString("yyyy-MM-dd"))"
                                            data-status="@project.Project_Status"
                                            data-bs-toggle="modal" data-bs-target="#editProjectModal">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-danger btn-delete"
                                            data-id="@project.Project_ID"
                                            data-title="@project.Project_Title"
                                            data-bs-toggle="modal" data-bs-target="#deleteProjectModal">
                                        <i class="bi bi-trash"></i> Archive
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-muted">No projects found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- ADD PROJECT MODAL -->
<div class="modal fade" id="addProjectModal" tabindex="-1" aria-labelledby="addProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-primary text-white rounded-top-4">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-plus-circle me-2"></i> Add New Project
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="CreateProject" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Project Title</label>
                        <input type="text" name="Project_Title" class="form-control" placeholder="Enter project title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea name="Project_Description" class="form-control" rows="2" placeholder="Enter description"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Start Date</label>
                            <input type="date" name="Start_Date" class="form-control">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">End Date</label>
                            <input type="date" name="End_Date" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Alloted Budget</label>
                        <input type="number" step="0.01" name="Allocated_Amount" class="form-control" placeholder="Enter a Budget" required>
                    </div>
                    <hr />
                    <h6 class="fw-bold text-primary"><i class="bi bi-paperclip me-2"></i>Attach Documents (Required)</h6>
                    <div class="mb-2">
                        <label class="form-label fw-semibold">Upload Documents (PDF)</label>
                        <div id="fileInputsContainer">
                            <div class="mb-2">
                                <input type="file" name="UploadedFiles" class="form-control" accept="application/pdf" required />
                            </div>
                        </div>
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="addFileBtn">
                            <i class="bi bi-plus-circle me-1"></i> Add Another Document
                        </button>
                        <div class="form-text mt-2">Only .pdf files are allowed. Max 25MB per file.</div>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary px-4">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- EDIT PROJECT MODAL -->
<div class="modal fade" id="editProjectModal" tabindex="-1" aria-labelledby="editProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-warning text-white rounded-top-4">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-pencil-square me-2"></i> Edit Project Status
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="EditProject">
                <div class="modal-body">
                    <div id="pendingMessage" class="alert alert-warning d-none">
                        <i class="bi bi-exclamation-circle me-2"></i> This project is pending approval and cannot be edited.
                    </div>
                    <div id="approvedMessage" class="alert alert-info d-none">
                        <i class="bi bi-info-circle me-2"></i> Approved projects can be updated to 'Completed'.
                    </div>

                    <input type="hidden" name="Project_ID" id="editProjectID">
                    
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Project Title</label>
                        <input type="text" id="editProjectTitle" class="form-control" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea id="editProjectDesc" class="form-control" rows="2" readonly></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Start Date</label>
                            <input type="date" id="editStartDate" class="form-control" readonly>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">End Date</label>
                            <input type="date" id="editEndDate" class="form-control" readonly>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Status</label>
                        <!-- If Approved, show dropdown to allow Completed. If Pending, show text. -->
                        <select name="Project_Status" id="editStatusSelect" class="form-select d-none">
                            <option value="Ongoing">Ongoing</option>
                            <option value="Completed">Completed</option>
                        </select>
                        <input type="text" id="editStatusText" class="form-control" readonly>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnSaveChanges" class="btn btn-warning text-white px-4">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- DELETE PROJECT MODAL -->
<div class="modal fade" id="deleteProjectModal" tabindex="-1" aria-labelledby="deleteProjectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow rounded-4">
            <div class="modal-header bg-danger text-white rounded-top-4">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-exclamation-triangle me-2"></i> Confirm Archive
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="DeleteProject">
                <div class="modal-body text-center">
                    <input type="hidden" name="id" id="deleteProjectID">
                    <p id="deleteMessage" class="mb-4 text-black"></p>
                    <div class="d-flex justify-content-center gap-2">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger px-4">Archive</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ARCHIVED PROJECTS MODAL -->
<div class="modal fade" id="archivedProjectsModal" tabindex="-1" aria-labelledby="archivedProjectsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-secondary text-white rounded-top-4">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-archive me-2"></i> Archived Projects
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="RestoreSelected">
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>Select</th>
                                    <th>Project Title</th>
                                    <th>Description</th>
                                    <th>Date Archived</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var archived = ViewBag.ArchivedProjects as List<BMS_project.ViewModels.ProjectListViewModel>;
                                    if (archived != null && archived.Any())
                                    {
                                        foreach (var item in archived)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" name="selectedIds" value="@item.Project_ID" class="form-check-input" />
                                                </td>
                                                <td>@item.Project_Title</td>
                                                <td>@item.Project_Description</td>
                                                <td>-</td> <!-- Date archived not tracked in model yet, could use Date_Submitted or add a new field -->
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-muted">No archived projects found.</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success px-4">Restore Selected</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dynamic File Inputs
        document.getElementById("addFileBtn").addEventListener("click", function() {
            let container = document.getElementById("fileInputsContainer");
            let div = document.createElement("div");
            div.className = "mb-2 d-flex gap-2";
            div.innerHTML = `
                <input type="file" name="UploadedFiles" class="form-control" accept="application/pdf" required />
                <button type="button" class="btn btn-danger btn-sm remove-file"><i class="bi bi-trash"></i></button>
            `;
            container.appendChild(div);
        });

        document.getElementById("fileInputsContainer").addEventListener("click", function(e) {
            if (e.target.closest(".remove-file")) {
                e.target.closest(".remove-file").parentElement.remove();
            }
        });

        // Populate Edit Modal
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                const status = btn.dataset.status;
                
                document.getElementById('editProjectID').value = btn.dataset.id;
                document.getElementById('editProjectTitle').value = btn.dataset.title;
                document.getElementById('editProjectDesc').value = btn.dataset.desc;
                document.getElementById('editStartDate').value = btn.dataset.start;
                document.getElementById('editEndDate').value = btn.dataset.end;
                
                const statusSelect = document.getElementById('editStatusSelect');
                const statusText = document.getElementById('editStatusText');
                const btnSave = document.getElementById('btnSaveChanges');
                const pendingMsg = document.getElementById('pendingMessage');
                const approvedMsg = document.getElementById('approvedMessage');

                // Reset State
                statusSelect.classList.add('d-none');
                statusText.classList.remove('d-none');
                btnSave.disabled = true;
                pendingMsg.classList.add('d-none');
                approvedMsg.classList.add('d-none');

                if (status === 'Pending') {
                    statusText.value = status;
                    pendingMsg.classList.remove('d-none');
                    // Button remains disabled
                } 
                else if (status === 'Approved' || status === 'Ongoing') {
                    statusText.classList.add('d-none');
                    statusSelect.classList.remove('d-none');
                    
                    // Set dropdown value if status matches an option, otherwise default to Ongoing
                    if(status === 'Approved') {
                        statusSelect.value = 'Ongoing'; // Suggest next step
                    } else {
                        statusSelect.value = status; 
                    }
                    
                    approvedMsg.classList.remove('d-none');
                    approvedMsg.innerHTML = '<i class="bi bi-info-circle me-2"></i> You can update status to Ongoing or Completed.';
                    btnSave.disabled = false;
                }
                else if (status === 'Completed') {
                    statusText.value = status;
                    // Already completed
                }
                else {
                    statusText.value = status;
                }
            });
        });

        // Populate Delete Modal
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', () => {
                document.getElementById('deleteProjectID').value = btn.dataset.id;
                document.getElementById('deleteMessage').innerHTML =
                    `Are you sure you want to delete <strong>${btn.dataset.title}</strong>?`;
            });
        });
    </script>
}