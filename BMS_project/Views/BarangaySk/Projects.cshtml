@{
   Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Project Management";
}

<div class="container-fluid">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-success text-white">
            <strong>Project Proposals</strong>
        </div>
        <div class="card-body">
            <button class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Add New Project</button>
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Project Title</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Youth Sports Program</td>
                        <td><span class="badge bg-warning text-dark">Pending</span></td>
                        <td>October 15, 2025</td>
                        <td><button class="btn btn-outline-primary btn-sm">View</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
