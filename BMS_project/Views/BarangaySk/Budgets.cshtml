@model BMS_project.Models.Budget
@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Budget & Finance";
}

@functions {
    public string FormatCurrency(decimal amount)
    {
        if (amount >= 1000000)
        {
            return (amount / 1000000).ToString("0.##") + "m";
        }
        if (amount >= 1000)
        {
            return (amount / 1000).ToString("0.##") + "k";
        }
        return amount.ToString("N0");
    }
}

<div class="mb-4">
    <h2 class="fw-bold"> Budget Auditing</h2>
</div>

<div class="container-fluid">
    <!-- FINANCIAL STATUS CARDS -->
    <div class="row mb-4">
        <!-- Total Allocation -->
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-muted fw-semibold mb-1">Total Allocation</h6>
                            <h3 class="fw-bold text-primary mb-0">
                                @FormatCurrency(Model?.budget ?? 0)
                            </h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-wallet2 fs-3 text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Disbursed -->
        <div class="col-md-4 mb-3 mb-md-0">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-muted fw-semibold mb-1">Total Disbursed</h6>
                            <h3 class="fw-bold text-warning mb-0">
                                @FormatCurrency(Model?.disbursed ?? 0)
                            </h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-cash-stack fs-3 text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Remaining Balance -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-muted fw-semibold mb-1">Remaining Balance</h6>
                            <h3 class="fw-bold text-success mb-0">
                                @FormatCurrency(Model?.balance ?? 0)
                            </h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-piggy-bank fs-3 text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BUDGET TABLE -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
            <h5 class="card-title mb-0 fw-bold">Budget Utilization History</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered align-middle table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Request Title</th>
                        <th>Status</th>
                        <th>Allotted Amount</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var allocations = ViewBag.Allocations as IEnumerable<BMS_project.Models.ProjectAllocation>;
                    }
                    @if (allocations != null && allocations.Any())
                    {
                        foreach (var item in allocations)
                        {
                            <tr>
                                <td>@(item.Project?.Project_Title ?? "Unknown Project")</td>
                                <td>
                                    @if (item.Project?.Project_Status == "Approved" || item.Project?.Project_Status == "Ongoing")
                                    {
                                        <span class="badge bg-success">@item.Project.Project_Status</span>
                                    }
                                    else if (item.Project?.Project_Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (item.Project?.Project_Status == "Rejected")
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@(item.Project?.Project_Status ?? "-")</span>
                                    }
                                </td>
                                <td>@item.Amount_Allocated.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                                <td>@(item.Project?.Date_Submitted?.ToString("MMM dd, yyyy") ?? "-")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No budget allocations found for this term.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- BUDGET REQUEST MODAL -->
<div class="modal fade" id="budgetModal" tabindex="-1" aria-labelledby="budgetModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-black" id="budgetModalLabel">Submit New Budget Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="requestTitle" class="form-label">Request Title</label>
                        <input type="text" class="form-control" id="requestTitle" placeholder="Enter request title">
                    </div>
                    <div class="mb-3">
                        <label for="requestAmount" class="form-label">Allotted Amount</label>
                        <input type="number" class="form-control" id="requestAmount" placeholder="Enter amount in PHP">
                    </div>
                    <div class="mb-3">
                        <label for="requestDetails" class="form-label">Details</label>
                        <textarea class="form-control" id="requestDetails" rows="3" placeholder="Provide additional details"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning text-dark">Submit Request</button>
                </div>
            </form>
        </div>
    </div>
</div>