@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Budget & Finance";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <strong>Budget Auditing & Requests</strong>
        </div>
        <div class="card-body">
            <button class="btn btn-warning text-dark mb-3"><i class="bi bi-upload"></i> Submit Budget Request</button>
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Request Title</th>
                        <th>Status</th>
                        <th>Amount</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Community Clean-up Drive</td>
                        <td><span class="badge bg-success">Approved</span></td>
                        <td>₱15,000</td>
                        <td>Sept 28, 2025</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
