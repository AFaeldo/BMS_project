@model IEnumerable<BMS_project.Models.YouthMember>

@{
    Layout = "~/Views/Shared/_BarangayLayout.cshtml";
    ViewData["Title"] = "Youth Profiling";
}

<div class="container-fluid">

    <!-- PAGE HEADER & FILTER -->
    <div class="row align-items-center mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold">Registered Youth Members</h2>
        </div>
        <div class="col-md-6 d-flex justify-content-md-end align-items-center gap-2">
            <select id="sitioFilter" class="form-select w-auto">
                <option value="">-- Filter by Sitio --</option>
                @if (ViewBag.SitioList != null)
                {
                    foreach (var item in (IEnumerable<SelectListItem>)ViewBag.SitioList)
                    {
                        <option value="@item.Text">@item.Text</option>
                    }
                }
            </select>
            <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#manageSitioModal">
                <i class="bi bi-geo-alt-fill me-1"></i> Manage Sitios
            </button>
        </div>
    </div>

    <div class="col-12 text-end mb-3">
        <button class="btn btn-secondary me-2" data-bs-toggle="modal" data-bs-target="#archivedYouthModal">
            <i class="bi bi-archive"></i> View Archived Youth
        </button>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addYouthModal">
            <i class="bi bi-person-plus"></i> Add Youth
        </button>
    </div>

    <!-- Youth Members Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h5 class="card-title mb-3 fw-semibold">Members List</h5>
            <table class="table table-bordered table-hover align-middle mb-0" id="youthTable">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Member ID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                        <th>Sex</th>
                        <th>Sitio</th>
                        <th>Birthdate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var y in Model)
                        {
                            <tr>
                                <td>@("Y" + y.Member_ID.ToString("D3"))</td>
                                <td>@y.FirstName</td>
                                <td>@y.LastName</td>
                                <td>@y.Age</td>
                                <td>@y.Sex</td>
                                <td class="sitio-cell">@(y.Sitio != null ? y.Sitio.Sitio_Name : "N/A")</td>
                                <td>@y.Birthday.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1 btn-edit"
                                            data-id="@y.Member_ID"
                                            data-firstname="@y.FirstName"
                                            data-lastname="@y.LastName"
                                            data-sex="@y.Sex"
                                            data-sitio-id="@y.Sitio_ID"
                                            data-birthdate="@y.Birthday.ToString("yyyy-MM-dd")"
                                            data-bs-toggle="modal" data-bs-target="#editYouthModal">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </button>

                                    <button class="btn btn-sm btn-danger btn-archive"
                                            data-id="@y.Member_ID"
                                            data-name="@y.FirstName @y.LastName"
                                            data-bs-toggle="modal" data-bs-target="#archiveYouthModal">
                                        <i class="bi bi-archive"></i> Archive
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No youth members found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add Youth Modal -->
<div class="modal fade" id="addYouthModal" tabindex="-1" aria-labelledby="addYouthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-3">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addYouthModalLabel">
                    <i class="bi bi-person-plus"></i> Add Youth Member
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Display global validation summary if any -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-controller="Youth" asp-action="Add" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">First Name</label>
                            <input name="FirstName" class="form-control" placeholder="Enter first name" value="@(ViewBag.NewYouth?.FirstName)" />
                            <span class="text-danger">@Html.ValidationMessage("FirstName")</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Last Name</label>
                            <input name="LastName" class="form-control" placeholder="Enter last name" value="@(ViewBag.NewYouth?.LastName)" />
                            <span class="text-danger">@Html.ValidationMessage("LastName")</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Age</label>
                            <input type="number" name="Age" id="addYouthAge" class="form-control" min="13" max="21" placeholder="13-21" readonly value="@(ViewBag.NewYouth?.Age != 0 ? ViewBag.NewYouth?.Age : "")" />
                            <span class="text-danger">@Html.ValidationMessage("Age")</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Sex</label>
                            <select name="Sex" class="form-select">
                                <option value="">-- Select Sex --</option>
                                <option value="Male" selected="@(ViewBag.NewYouth?.Sex == "Male")">Male</option>
                                <option value="Female" selected="@(ViewBag.NewYouth?.Sex == "Female")">Female</option>
                            </select>
                            <span class="text-danger">@Html.ValidationMessage("Sex")</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Sitio</label>
                            <select name="Sitio_ID" class="form-select" asp-items="ViewBag.SitioList">
                                <option value="">-- Select Sitio --</option>
                            </select>
                            <span class="text-danger">@Html.ValidationMessage("Sitio_ID")</span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Birthdate</label>
                            <input name="Birthday" id="addYouthBirthdate" type="date" class="form-control" value="@(ViewBag.NewYouth?.Birthday != null && ViewBag.NewYouth.Birthday != DateTime.MinValue ? ((DateTime)ViewBag.NewYouth.Birthday).ToString("yyyy-MM-dd") : "")" />
                            <span class="text-danger">@Html.ValidationMessage("Birthday")</span>
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                            <i class="bi bi-x-circle me-1"></i> Cancel
                        </button>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-check-circle me-1"></i> Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editYouthModal" tabindex="-1" aria-labelledby="editYouthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg border-0 rounded-3">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="editYouthModalLabel">
                    <i class="bi bi-pencil-square"></i> Edit Youth Member
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Youth" asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="editMember_ID" name="Member_ID" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">First Name</label>
                            <input id="editFirstName" name="FirstName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Last Name</label>
                            <input id="editLastName" name="LastName" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Sex</label>
                            <select id="editSex" name="Sex" class="form-select">
                                <option value="">-- Select Sex --</option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Sitio</label>
                            <select id="editSitio_ID" name="Sitio_ID" class="form-select" asp-items="ViewBag.SitioList">
                                <option value="">-- Select Sitio --</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Birthdate</label>
                            <input id="editBirthdate" name="Birthdate" type="date" class="form-control" />
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-warning text-white px-4">
                            <i class="bi bi-save me-1"></i> Update
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Manage Sitio Modal -->
<div class="modal fade" id="manageSitioModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow border-0 rounded-3">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="bi bi-geo-alt-fill"></i> Manage Sitios</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- List -->
                <h6 class="fw-bold mb-2">Existing Sitios</h6>
                <ul class="list-group mb-4" id="sitioListGroup" style="max-height: 200px; overflow-y: auto;">
                    <li class="list-group-item text-muted text-center">Loading...</li>
                </ul>

                <!-- Add Form -->
                <h6 class="fw-bold mb-2">Add New Sitio</h6>
                <form id="addSitioForm">
                    <div class="input-group">
                        <input type="text" id="newSitioName" class="form-control" placeholder="Enter new Sitio name" required />
                        <button type="submit" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Add</button>
                    </div>
                    <div id="sitioError" class="text-danger small mt-1 d-none"></div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Archive Modal (replaces Delete Modal) -->
<div class="modal fade" id="archiveYouthModal" tabindex="-1" aria-labelledby="archiveYouthModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow border-0 rounded-3">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Archive
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <form asp-controller="Youth" asp-action="Archive" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="archiveMember_ID" name="Member_ID" />
                    <p id="archiveMessage" class="mb-3 text-black"></p>
                    <div class="d-flex justify-content-center gap-2">
                        <button type="button" class="btn btn-outline-secondary px-4" data-bs-dismiss="modal">
                            Cancel
                        </button>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="bi bi-archive"></i> Archive
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- RESTORE YOUTH MODAL -->
<div class="modal fade" id="archivedYouthModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-secondary text-white rounded-top-4">
                <h5 class="modal-title fw-bold">
                    <i class="bi bi-archive me-2"></i> Archived Youth Members
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-controller="Youth" asp-action="RestoreSelected" method="post">
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle text-center">
                            <thead class="table-light">
                                <tr>
                                    <th>Select</th>
                                    <th>Name</th>
                                    <th>Age</th>
                                    <th>Sex</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var archivedYouth = ViewBag.ArchivedYouth as List<BMS_project.Models.YouthMember>;
                                    if (archivedYouth != null && archivedYouth.Any())
                                    {
                                        foreach (var item in archivedYouth)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" name="selectedIds" value="@item.Member_ID" class="form-check-input" />
                                                </td>
                                                <td>@item.FirstName @item.LastName</td>
                                                <td>@item.Age</td>
                                                <td>@item.Sex</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="text-muted">No archived members found.</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success px-4">Restore Selected</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Check if we need to show the Add Youth Modal (e.g. after validation error)
        var showAddModal = '@(ViewBag.ShowAddModal ?? false)'.toLowerCase() === 'true';
        if (showAddModal) {
            var addModal = new bootstrap.Modal(document.getElementById('addYouthModal'));
            addModal.show();
        }

        // Fill Edit Modal
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', () => {
                document.getElementById('editMember_ID').value = btn.dataset.id;
                document.getElementById('editFirstName').value = btn.dataset.firstname;
                document.getElementById('editLastName').value = btn.dataset.lastname;
                document.getElementById('editSex').value = btn.dataset.sex;
                document.getElementById('editSitio_ID').value = btn.dataset.sitioId; // Use ID for dropdown
                document.getElementById('editBirthdate').value = btn.dataset.birthdate;
            });
        });

        // Fill Archive Modal
        document.querySelectorAll('.btn-archive').forEach(btn => {
            btn.addEventListener('click', () => {
                document.getElementById('archiveMember_ID').value = btn.dataset.id;
                document.getElementById('archiveMessage').innerHTML =
                    `Are you sure you want to archive <strong>${btn.dataset.name}</strong>?`;
            });
        });

        // Auto-calculate Age from Birthdate for Add Youth Modal
        const addYouthBirthdateInput = document.getElementById('addYouthBirthdate');
        const addYouthAgeInput = document.getElementById('addYouthAge');

        if (addYouthBirthdateInput && addYouthAgeInput) {
            addYouthBirthdateInput.addEventListener('change', function() {
                const birthdateValue = this.value;
                if (birthdateValue) {
                    const birthdate = new Date(birthdateValue);
                    const today = new Date();
                    let age = today.getFullYear() - birthdate.getFullYear();
                    const monthDifference = today.getMonth() - birthdate.getMonth();

                    if (monthDifference < 0 || (monthDifference === 0 && today.getDate() < birthdate.getDate())) {
                        age--;
                    }
                    addYouthAgeInput.value = age;
                } else {
                    addYouthAgeInput.value = '';
                }
            });
        }

        // --- SITIO MANAGEMENT LOGIC ---
        const manageSitioModal = document.getElementById('manageSitioModal');
        manageSitioModal.addEventListener('show.bs.modal', function () {
            loadSitios();
        });

        function loadSitios() {
            const list = document.getElementById('sitioListGroup');
            list.innerHTML = '<li class="list-group-item text-center text-muted">Loading...</li>';
            
            fetch('/api/Sitio/List')
                .then(res => res.json())
                .then(data => {
                    list.innerHTML = '';
                    if (data.length === 0) {
                        list.innerHTML = '<li class="list-group-item text-center text-muted">No sitios found.</li>';
                    } else {
                        data.forEach(s => {
                            const li = document.createElement('li');
                            li.className = 'list-group-item';
                            li.textContent = s.name;
                            list.appendChild(li);
                        });
                    }
                })
                .catch(err => {
                    console.error(err);
                    list.innerHTML = '<li class="list-group-item text-center text-danger">Error loading list.</li>';
                });
        }

        document.getElementById('addSitioForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const input = document.getElementById('newSitioName');
            const name = input.value.trim();
            const errorDiv = document.getElementById('sitioError');
            
            if(!name) return;

            errorDiv.classList.add('d-none');
            
            fetch('/api/Sitio/Add', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ name: name })
            })
            .then(res => {
                if(res.ok) return res.json();
                return res.text().then(text => { throw new Error(text || res.statusText); });
            })
            .then(data => {
                input.value = ''; // Clear
                loadSitios(); // Refresh list
                
                // Optional: Update the filter and edit dropdowns without reload? 
                // For simplicity, user can reload page to see new sitio in main dropdowns, 
                // or we could append to them via JS.
                // Let's assume page reload or next visit is fine for main dropdowns.
            })
            .catch(err => {
                errorDiv.textContent = err.message;
                errorDiv.classList.remove('d-none');
            });
        });

        // --- SITIO FILTER LOGIC ---
        document.getElementById('sitioFilter').addEventListener('change', function() {
            const filterValue = this.value.toLowerCase();
            const rows = document.querySelectorAll('#youthTable tbody tr');

            rows.forEach(row => {
                if (row.children.length === 1) return; // Skip "No records" row
                const cell = row.querySelector('.sitio-cell');
                const sitioName = cell ? cell.textContent.trim().toLowerCase() : "";
                
                if (filterValue === "" || sitioName === filterValue) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });

    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}