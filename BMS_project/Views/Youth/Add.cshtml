@model BMS_project.Models.YouthMember
@{
    ViewData["Title"] = "Add Youth";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-plus me-2"></i> Add Youth Member</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post" novalidate>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-semibold"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-semibold"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Gender" class="form-label fw-semibold"></label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">-- Select Gender --</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Sitio" class="form-label fw-semibold"></label>
                                <input asp-for="Sitio" class="form-control" placeholder="Enter sitio" />
                                <span asp-validation-for="Sitio" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Birthday" class="form-label fw-semibold"></label>
                                <input asp-for="Birthday" type="date" class="form-control" />
                                <span asp-validation-for="Birthday" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle me-1"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle me-1"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
