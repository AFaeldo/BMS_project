<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Barangay SK | KABATAAN+</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <!-- SIDEBAR -->
    <aside class="sidebar d-flex flex-column justify-content-between">
        <div>
            <!-- Logo Section -->
            <div class="text-center py-3">
                <img src="~/images/SK_Federation.png" alt="Sk Logo"
                     class="img-fluid mb-2" style="max-width: 85px; height: 85px;">
                <h6 class="fw-bold text-white mb-0">KABATAAN+</h6>
                <p class="text-light small mb-0">Hello, Barangay SK Official</p>
            </div>

            <hr class="border-secondary mx-2" />

            <!-- Navigation -->
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a asp-controller="BarangaySk" asp-action="Dashboard"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="BarangaySk" asp-action="Documents"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Document Uploads" ? "active" : "")">
                        <i class="bi bi-folder2-open me-2"></i> Documents
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="BarangaySk" asp-action="YouthProfiles"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Youth Profiling" ? "active" : "")">
                        <i class="bi bi-person-badge me-2"></i> Youth Profiling
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="BarangaySk" asp-action="Projects"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Project Management" ? "active" : "")">
                        <i class="bi bi-diagram-3 me-2"></i> Project Management
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="BarangaySk" asp-action="Budgets"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Budget & Finance" ? "active" : "")">
                        <i class="bi bi-cash-stack me-2"></i> Budget & Finance
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="BarangaySk" asp-action="Reports"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Reports" ? "active" : "")">
                        <i class="bi bi-bar-chart-line me-2"></i> Reports
                    </a>
                </li>
            </ul>
        </div>

        <!-- Logout -->
        <div class="sidebar-footer mt-auto mb-3 px-3">
            <hr class="border-secondary" />
            <a class="nav-link text-danger fw-semibold" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-right me-2"></i> Logout
            </a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <!-- TOPBAR -->
        <header class="topbar d-flex align-items-center justify-content-between shadow-sm px-3">
            <div class="d-flex align-items-center">
                <!-- Hamburger Toggle -->
                <button id="sidebarToggle" class="btn p-0 border-0 bg-transparent me-3">
                    <i class="bi bi-list fs-3"></i>
                </button>
            </div>

            <div class="d-flex align-items-center gap-3">
                <!-- Notification Dropdown -->
                <div class="dropdown">
                    <a class="text-dark text-decoration-none position-relative" href="#" role="button"
                       id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-bell fs-4"></i>
                        <!-- Notification badge -->
                        <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle">
                            <span class="visually-hidden">New alerts</span>
                        </span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="notificationDropdown" style="width: 300px;">
                        <li class="dropdown-header fw-bold text-center bg-light">Notifications</li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item small" href="#">Youth record requires update</a></li>
                        <li><a class="dropdown-item small" href="#">Project proposal feedback available</a></li>
                        <li><a class="dropdown-item small" href="#">Barangay report submission reminder</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a asp-controller="Barangay"
                               asp-action="Reports"
                               class="dropdown-item text-center text-primary small">
                               View All
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- User Dropdown -->
                <div class="dropdown">
                    <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                       href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle fs-4 me-1"></i> Barangay SK Official
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><a class="dropdown-item" href="#">Settings</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- PAGE BODY -->
        <section class="page-body mt-4 px-4">
            @RenderBody()
        </section>

        <!-- FOOTER -->
        <footer class="text-center text-muted mt-4 mb-3 small">
            &copy; @DateTime.Now.Year KABATAAN+ Management System <br />
            Developed by Bolaños, Faeldo & Tugas
        </footer>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar Toggle Script -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.querySelector('.sidebar');
            const main = document.querySelector('.main-content');
            const topbar = document.querySelector('.topbar');
            const toggle = document.getElementById('sidebarToggle');

            toggle.addEventListener('click', () => {
                sidebar.classList.toggle('collapsed');
                main.classList.toggle('expanded');
                topbar.classList.toggle('expanded');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
