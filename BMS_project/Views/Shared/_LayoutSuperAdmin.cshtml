<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Super Admin | KABATAAN+</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <!-- SIDEBAR -->
    <aside class="sidebar d-flex flex-column justify-content-between">
        <div>
            <!-- Logo Section -->
            <div class="text-center py-3">
                <img src="~/images/Calapan_City_Logo.png" alt="City Logo"
                     class="img-fluid mb-2" style="max-width: 85px; height: 85px;">
                <h6 class="fw-bold text-white mb-0">KABATAAN+</h6>
                <p class="text-light small mb-0">Hello, Administrator</p>
            </div>

            <hr class="border-secondary mx-2" />

            <!-- Navigation -->
            <ul class="nav flex-column px-2">
                <li class="nav-item">
                    <a asp-controller="SuperAdmin" asp-action="Dashboard"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="SuperAdmin" asp-action="ManageUsers"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Manage Users" ? "active" : "")">
                        <i class="bi bi-people me-2"></i> Users
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="SuperAdmin" asp-action="SystemLogs"
                       class="nav-link @(ViewData["Title"]?.ToString() == "System Logs" ? "active" : "")">
                        <i class="bi bi-journal-text me-2"></i> System Logs
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="SuperAdmin" asp-action="Settings"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Settings" ? "active" : "")">
                        <i class="bi bi-gear me-2"></i> Settings
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="SuperAdmin" asp-action="BackupMaintenance"
                       class="nav-link @(ViewData["Title"]?.ToString() == "Backup & Maintenance" ? "active" : "")">
                        <i class="bi bi-hdd-network me-2"></i> Backup & Maintenance
                    </a>
                </li>
            </ul>
        </div>

        <!-- Logout -->
        <div class="sidebar-footer mt-auto mb-3 px-3">
            <hr class="border-secondary" />
            <a class="nav-link text-danger fw-semibold" asp-controller="Account" asp-action="Login">
                <i class="bi bi-box-arrow-right me-2"></i> Logout
            </a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <!-- TOPBAR -->
        <header class="topbar d-flex align-items-center justify-content-between shadow-sm">
            <div class="d-flex align-items-center">
                <!-- Hamburger to the right of sidebar -->
                <button id="sidebarToggle" class="btn p-0 border-0 bg-transparent me-3">
                    <i class="bi bi-list fs-3"></i>
                </button>
                @* @ViewData["Title"] *@
            </div>

            <!-- Admin Dropdown -->
            <div class="dropdown">
                <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                   href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-fill me-1"></i> Administrator
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                </ul>
            </div>
        </header>

        <!-- PAGE BODY -->
        <section class="page-body mt-4 px-4">
            @RenderBody()
        </section>

        <!-- FOOTER -->
        <footer class="text-center text-muted mt-4 mb-3 small">
            &copy; @DateTime.Now.Year KABATAAN+ Management System <br />
            Developed by Bolaños, Faeldo & Tugas
        </footer>
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sidebar Toggle -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.querySelector('.sidebar');
            const main = document.querySelector('.main-content');
            const topbar = document.querySelector('.topbar');
            const toggle = document.getElementById('sidebarToggle');

            toggle.addEventListener('click', () => {
                sidebar.classList.toggle('collapsed');
                main.classList.toggle('expanded');
                topbar.classList.toggle('expanded');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
