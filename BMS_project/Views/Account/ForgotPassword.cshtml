@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="frost-card shadow-lg">

    <div class="text-center mb-3">
        <img src="~/images/Calapan_City_Logo.png" class="logo" alt="City Logo" />
        <h5 class="title">KABATAAN++</h5>
        <p class="subtitle">Barangay SK Management System</p>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center py-2">@ViewBag.Message</div>
    }

    <form method="post" asp-action="ForgotPassword">
        <div class="mb-3">
            <label class="form-label fw-semibold">Username</label>
            <div class="input-wrap">
                <i class="bi bi-person-fill input-icon"></i>
                <input type="text" class="form-control" name="username" placeholder="Enter your username" required />
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-3">Verify Account</button>

        <div class="d-flex justify-content-center">
            <a asp-controller="Account" asp-action="Login" class="forgot">
                <i class="bi bi-arrow-left"></i> Back to Login
            </a>
        </div>
    </form>
</div>
