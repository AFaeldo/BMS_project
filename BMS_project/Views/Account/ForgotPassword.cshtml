@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="frost-card shadow-lg p-4" style="max-width:450px; margin:auto;">

    <div class="text-center mb-3">
        <img src="~/images/Calapan_City_Logo.png" class="logo mb-2" alt="City Logo" style="width:80px;" />
        <h5 class="title mb-1">KABATAAN++</h5>
        <p class="subtitle mb-3">Barangay SK Management System</p>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center py-2">@ViewBag.Message</div>
    }

    <form method="post" asp-action="ForgotPassword">

        <div class="row g-2">
            <div class="col-md-6">
                <label class="form-label fw-semibold">Last Name</label>
                <div class="input-wrap">
                    <i class="bi bi-person-fill input-icon"></i>
                    <input type="text" class="form-control" name="LastName" placeholder="Last Name" required />
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">First Name</label>
                <div class="input-wrap">
                    <i class="bi bi-person-fill input-icon"></i>
                    <input type="text" class="form-control" name="FirstName" placeholder="First Name" required />
                </div>
            </div>
        </div>

        <div class="mb-2 mt-2">
            <label class="form-label fw-semibold">Email</label>
            <div class="input-wrap">
                <i class="bi bi-envelope-fill input-icon"></i>
                <input type="email" class="form-control" name="Email" placeholder="Email" required />
            </div>
        </div>

        <div class="mb-2">
            <label class="form-label fw-semibold">Contact No.</label>
            <div class="input-wrap">
                <i class="bi bi-telephone-fill input-icon"></i>
                <input type="text" class="form-control" name="ContactNumber" placeholder="Contact Number" required />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Reason you can't remember your password</label>
            <div class="input-wrap">
                <i class="bi bi-pencil-fill input-icon"></i>
                <textarea class="form-control" name="Reason" placeholder="Explain why you can't remember your password" rows="3" required></textarea>
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2">Verify Account</button>

        <div class="text-center">
            <a asp-controller="Account" asp-action="Login" class="forgot">
                <i class="bi bi-arrow-left"></i> Back to Login
            </a>
        </div>
    </form>
</div>
