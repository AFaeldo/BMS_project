@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="frost-card shadow-lg">

    <div class="text-center mb-3">
        <img src="~/images/Calapan_City_Logo.png" class="logo" alt="City Logo" />
        <h5 class="title">KABATAAN++</h5>
        <p class="subtitle">Barangay SK Management System</p>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger text-center py-2">@ViewBag.Error</div>
    }

    <form method="post" asp-action="Login">
        <input type="hidden" name="role" value="@ViewBag.Role" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Username</label>

            <div class="input-wrap">
                <i class="bi bi-person-fill input-icon"></i>
                <input type="text" class="form-control" name="username" placeholder="e.g., SKxxxx" required />
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label fw-semibold">Password</label>
            <div class="input-wrap">
                <i class="bi bi-lock-fill input-icon"></i>
                <input type="password" class="form-control" name="password" id="passwordInput" placeholder="" required />
                <i class="bi bi-eye-slash eye-btn" id="togglePassword"></i>
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
    </form>
</div>

<!-- ANNOUNCEMENT MODAL -->
@if (ViewBag.Announcement != null)
{
    var ann = ViewBag.Announcement as BMS_project.Models.Announcement;
    <div class="modal fade" id="announcementModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4">
                <div class="modal-header bg-primary text-white rounded-top-4">
                    <h5 class="modal-title fw-bold">
                        <i class="bi bi-megaphone-fill me-2"></i> @ann?.Title
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <p class="fs-5" style="white-space: pre-wrap;">@ann?.Message</p>
                    <div class="text-end text-muted mt-3">
                        <small>Posted on: @ann?.Date_Created.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-primary px-4 rounded-pill" data-bs-dismiss="modal">Got it!</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Toggle Password
        const togglePassword = document.getElementById("togglePassword");
        const passwordInput = document.getElementById("passwordInput");

        togglePassword.addEventListener("click", function () {
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            this.classList.toggle("bi-eye");
            this.classList.toggle("bi-eye-slash");
        });

        // Show Announcement Modal Automatically
        document.addEventListener('DOMContentLoaded', function() {
            var announcementModalEl = document.getElementById('announcementModal');
            if (announcementModalEl) {
                var modal = new bootstrap.Modal(announcementModalEl);
                modal.show();
            }
        });
    </script>
}
