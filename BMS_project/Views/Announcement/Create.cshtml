@model BMS_project.Models.Announcement

@{
    ViewData["Title"] = "Create Announcement";
    Layout = "~/Views/Shared/_LayoutSuperAdmin.cshtml";
}

<div class="container mt-4" style="max-width: 800px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-megaphone me-2"></i>Create Announcement</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter announcement title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Message" class="form-label fw-bold">Message</label>
                    <textarea asp-for="Message" class="form-control" rows="5" placeholder="Enter announcement content..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="mb-3 form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" checked />
                    <label class="form-check-label fw-semibold" asp-for="IsActive">
                        Set as Active immediately
                    </label>
                    <div class="form-text">If active, this announcement will appear on the Login page.</div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-light border">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4">Create Announcement</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
